<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Secondary_Button_Filled">
        <item name="android:backgroundTint">@color/primary_500</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.JoshTypography.SubHeadingSemiBold24
        </item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="cornerRadius">@dimen/_32sdp</item>
        <item name="rippleColor">@color/pure_white</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Secondary_Button_Filled_Disabled">
        <item name="android:backgroundTint">@color/disabled</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.JoshTypography.SubHeadingSemiBold24</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_32sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>