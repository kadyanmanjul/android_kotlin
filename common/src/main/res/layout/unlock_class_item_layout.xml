<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unlock_class_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:paddingStart="@dimen/_16sdp"
    android:paddingEnd="@dimen/_32sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_width="@dimen/_216sdp"
        android:layout_height="@dimen/_160sdp"
        android:background="#F1F2F4"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="@dimen/_4sdp"
        android:enabled="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingBottom="@dimen/_4sdp"
        app:cardBackgroundColor="@color/pure_white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="@dimen/_4sdp"
        app:contentPaddingRight="@dimen/_4sdp"
        app:contentPaddingTop="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:cardBackgroundColor="@color/pure_white"
        tools:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/unlock_next_class_blur" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_6sdp"
                android:backgroundTint="@color/primary_500"
                android:clickable="true"
                android:focusable="true"
                android:insetBottom="0dp"
                android:maxLines="1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Bold"
                android:textColor="@color/pure_white"
                app:cornerRadius="@dimen/_16sdp"
                app:elevation="0dp"
                app:icon="@drawable/ic_baseline_arrow_right"
                app:iconGravity="end"
                app:iconPadding="@dimen/_4sdp"
                app:iconTint="@color/pure_white"
                app:iconTintMode="multiply"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.75"
                app:rippleColor="@color/pure_white"
                tools:text="@string/unlock_class_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
