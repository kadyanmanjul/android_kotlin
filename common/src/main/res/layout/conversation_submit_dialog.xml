<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.common.ui.signup.VerificationTimeoutBottomSheet" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pure_white"
            android:paddingBottom="@dimen/_8sdp"
            tools:background="@color/pure_white">


        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:gravity="center"
                android:text="@string/submit_record_msz"
                android:textColor="@color/text_default"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_no"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/no"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.Button"
            android:textColor="@color/primary_500"
            app:cornerRadius="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_1"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.35"
            app:rippleColor="@color/primary_500"
            app:strokeColor="@color/primary_500" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_yes"
                android:textAppearance="@style/TextAppearance.JoshTypography.Button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_500"
                android:clickable="true"
                android:focusable="true"
                android:maxLines="1"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/pure_white"
                app:cornerRadius="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_no"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.35"
                app:rippleColor="@color/pure_white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
