<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.voip.new_arch.ui.views.SearchingUserFragment">

    <data>
        <variable
            name="vm"
            type="com.joshtalks.joshskills.common.ui.voip.new_arch.ui.viewmodels.VoiceCallViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:text="@string/finding_practise_partner"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.LargeBold"
            android:textSize="@dimen/_22ssp"
            android:textColor="@color/text_default"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/image_view_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jaruri Jankari"
            android:backgroundTint="#33FFA41C"
            android:paddingVertical="@dimen/_6sdp"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:textColor="@color/accent_600"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_info_golden_color"
            android:drawablePadding="@dimen/_6sdp"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Semi_Bold"
            android:paddingHorizontal="@dimen/_10sdp"
            android:background="@drawable/golden_color_with_solid_24radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:srcCompat="@drawable/have_a_referral" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_of_reason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_24sdp"
            app:layout_constraintBottom_toTopOf="@+id/searching_lottie"
            app:layout_constraintTop_toBottomOf="@+id/image_view_ph"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_searching_reason" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/searching_lottie"
            android:layout_width="0dp"
            android:layout_height="@dimen/_142sdp"
            android:scaleX="1.6"
            android:scaleY="1.6"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/search_new_anim.json"
            app:lottie_imageAssetsFolder="lottie"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"
            app:lottie_scale="1"
            app:lottie_speed="1.5"
            android:layout_marginBottom="@dimen/_42sdp"
            android:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>