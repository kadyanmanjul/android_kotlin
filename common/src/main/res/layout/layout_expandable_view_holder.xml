<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/course_padding_dimen"
        android:layout_marginVertical="@dimen/_20sdp"
        android:orientation="vertical">

    <com.joshtalks.joshskills.common.core.custom_ui.custom_textview.JoshTextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5"
            android:textColor="@color/text_default"
            tools:text="Questions &amp; Answers" />

    <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            tools:itemCount="2"
            tools:listitem="@layout/faq_category_item_layout" />

    <com.mindorks.placeholderview.ExpandablePlaceHolderView
            android:id="@+id/expandableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:scrollbars="vertical"
            tools:listitem="@layout/faq_item" />
</LinearLayout>
