<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.joshtalks.joshskills.common.R"/>
        <variable
            name="vm"
            type="com.joshtalks.joshskills.common.ui.group.viewmodels.JoshGroupViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.group.JoshGroupActivity">

        <com.joshtalks.joshskills.common.ui.voip.new_arch.ui.callbar.util.CallBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/call_bar_layout"/>

        <include
            layout="@layout/call_ongoing_layout" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/group_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tap_to_return_call" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>
