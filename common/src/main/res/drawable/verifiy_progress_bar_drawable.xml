<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_16sdp" />
            <solid android:color="@color/pure_white" />
            <stroke
                    android:width="@dimen/_1sdp"
                    android:color="@color/primary_500" />
        </shape>
    </item>

    <item
            android:id="@android:id/progress"
            android:bottom="@dimen/_1sdp"
            android:left="@dimen/_1sdp"
            android:right="@dimen/_1sdp"
            android:top="@dimen/_1sdp">
        <clip>
            <shape>
                <corners android:radius="@dimen/_16sdp" />
                <solid android:color="@color/primary_500" />
            </shape>
        </clip>
    </item>
</layer-list>