<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Pinview">
      <attr name="pinBackground" format="reference"/>
      <attr name="pinLength" format="integer"/>
      <attr name="pinWidth" format="dimension"/>
      <attr name="pinHeight" format="dimension"/>
      <attr name="splitWidth" format="dimension"/>
      <attr name="cursorVisible" format="boolean"/>
      <attr name="password" format="boolean"/>
      <attr name="forceKeyboard" format ="boolean"/>
      <attr name="hint" format="string"/>
      <attr name="inputType"/>
      <attr name="textSize" format="dimension"/>
    </declare-styleable>
    <attr name="inputType" format="enum">
      <enum name="text" value="0"/>
      <enum name="number" value="1"/>
    </attr>


  <declare-styleable name="OtpTextView">
    <attr name="android:textColor" />
    <attr name="otp" format="string" />
    <attr name="hide_otp" format="boolean" />
    <attr name="hide_otp_drawable" format="reference" />
    <attr name="length" format="integer" />
    <attr name="width" format="dimension" />
    <attr name="height" format="dimension" />
    <attr name="box_margin" format="dimension" />
    <attr name="box_margin_left" format="dimension" />
    <attr name="box_margin_right" format="dimension" />
    <attr name="box_margin_top" format="dimension" />
    <attr name="box_margin_bottom" format="dimension" />
    <attr name="bar_height" format="dimension" />
    <attr name="bar_enabled" format="boolean" />
    <attr name="otp_box_background" format="reference" />
    <attr name="otp_box_background_active" format="reference" />
    <attr name="otp_box_background_inactive" format="reference" />
    <attr name="otp_box_background_success" format="reference" />
    <attr name="otp_box_background_error" format="reference" />
    <attr name="bar_margin" format="dimension" />
    <attr name="bar_margin_bottom" format="dimension" />
    <attr name="bar_margin_right" format="dimension" />
    <attr name="bar_margin_left" format="dimension" />
    <attr name="bar_margin_top" format="dimension" />
    <attr name="otp_text_size" format="dimension" />
    <attr name="bar_active_color" format="color" />
    <attr name="bar_inactive_color" format="color" />
    <attr name="bar_error_color" format="color" />
    <attr name="bar_success_color" format="color" />
    <attr name="text_typeface" format="string" />
    <attr name="underline_width" format="dimension"/>
    <attr name="cursor_visible" format="dimension" />


  </declare-styleable>
  <!-- default style for theme -->
  <attr name="ttlm_defaultStyle" format="reference" />

  <!-- default style -->
  <declare-styleable name="TooltipLayout">
    <attr name="ttlm_padding" format="dimension" />
    <attr name="ttlm_strokeColor" format="color" />
    <attr name="ttlm_backgroundColor" format="color" />
    <attr name="ttlm_strokeWeight" format="dimension" />
    <attr name="ttlm_cornerRadius" format="dimension" />
    <attr name="ttlm_arrowRatio" format="float" />
    <attr name="ttlm_overlayStyle" format="reference" />
    <attr name="ttlm_font" format="string" />
    <attr name="ttlm_animationStyle" format="reference" />

    <!-- text view style -->
    <attr name="ttlm_textStyle" format="reference" />
  </declare-styleable>

  <declare-styleable name="TooltipOverlay">
    <attr name="android:color" />
    <attr name="android:alpha" />
    <attr name="ttlm_repeatCount" format="integer" />
    <attr name="ttlm_duration" format="integer" />
    <attr name="android:layout_margin" />
  </declare-styleable>

</resources>