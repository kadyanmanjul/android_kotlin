<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/pure_white"
    android:elevation="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/warning"
        android:gravity="center"
        android:paddingVertical="@dimen/_5sdp"
        android:textAppearance="@style/TextAppearance.JoshTypography.CaptionSemiBold"
        android:textColor="@color/text_default"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible"
        tools:text="Someone just bought this course ðŸŽ‰ðŸ’¯"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_payment_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_7sdp"
        style="@style/Primary_Button_Filled"
        android:background="@drawable/round_rectangle"
        android:text="Proceed to Payment"
        android:textAllCaps="false"
        android:visibility="visible"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        app:cornerRadius="@dimen/_32sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_message_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:gravity="center"
        android:text="@string/privacy_label"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.JoshTypography.TinyRegular"
        android:textColor="@color/dark_grey"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_payment_course">

    </com.google.android.material.textview.MaterialTextView>

</androidx.constraintlayout.widget.ConstraintLayout>



