<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="obj"
            type="com.joshtalks.joshskills.repository.local.minimalentity.InboxEntity" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pure_white"
        android:clickable="true"
        android:elevation="0dp"
        android:enabled="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/pure_white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="0dp"
        app:contentPaddingRight="0dp"
        app:contentPaddingTop="0dp"
        tools:cardBackgroundColor="@color/pure_white"
        tools:cardPreventCornerOverlap="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/_16sdp"
                android:orientation="vertical" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/_16sdp"
                android:orientation="vertical" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineBottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="@dimen/_13sdp"
                android:orientation="horizontal" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_begin="@dimen/_12sdp"
                android:orientation="horizontal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                app:layout_constraintTop_toTopOf="@id/guidelineTop"
                tools:src="@color/primary_500" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:padding="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintEnd_toEndOf="@+id/profile_image"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.JoshTypography.SubHeadingSemiBold20"
                android:textColor="@color/text_default"
                app:layout_constraintEnd_toStartOf="@+id/tv_last_message_time"
                app:layout_constraintStart_toEndOf="@+id/profile_image"
                app:layout_constraintTop_toTopOf="@+id/profile_image"
                tools:ignore="MissingPrefix"
                tools:text="Course Name" />

            <ProgressBar
                android:id="@+id/course_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/_14sdp"
                android:layout_gravity="bottom"
                android:progressDrawable="@drawable/progress_background"
                android:secondaryProgress="0"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintEnd_toEndOf="@+id/tv_name"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:max="100"
                tools:progress="40" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginEnd="@dimen/_11sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="@string/click_to_start_the_course"
                android:textAppearance="@style/TextAppearance.JoshTypography.CaptionRegular"
                android:textColor="@color/text_subdued"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintEnd_toStartOf="@+id/unseen_msg_count"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:ignore="MissingPrefix"
                tools:text="Click to start the course"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_name"
                android:maxLines="1"
                android:textColor="@color/text_subdued"
                android:paddingHorizontal="@dimen/_2sdp"
                android:textAppearance="@style/TextAppearance.JoshTypography.CaptionRegular"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintTop_toTopOf="@+id/tv_name"
                tools:text="08/12/90" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/unseen_msg_count"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignBottom="@id/tv_last_message"
                android:background="@drawable/circle2"
                android:backgroundTint="@color/primary_500"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_2sdp"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal"
                android:textColor="@color/pure_white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_last_message"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                tools:text="3"
                tools:visibility="visible" />

            <View
                android:id="@+id/horizontal_line"
                style="@style/line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>