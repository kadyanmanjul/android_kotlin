<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="call"
            type="com.cometchat.pro.core.Call" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/call_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            tools:text="21/1/2020" />

        <TextView
            android:id="@+id/call_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/call_time_tv"
            android:layout_toRightOf="@+id/call_date_tv"
            android:drawablePadding="4dp"
            android:textStyle="bold"
            tools:drawableLeft="@drawable/ic_call_outgoing_24dp"
            tools:text="IronMan initiated Audio Call" />

        <TextView
            android:id="@+id/call_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            tools:text="05:30" />
    </RelativeLayout>
</layout>