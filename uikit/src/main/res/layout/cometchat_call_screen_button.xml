<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/green_arrow_one"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:alpha="0"
        android:src="@drawable/ic_keyboard_arrow_up_green_24dp"
        tool:alpha="1" />

    <ImageView
        android:id="@+id/green_arrow_two"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-18dp"
        android:alpha="0"
        android:src="@drawable/ic_keyboard_arrow_up_green_24dp"
        tool:alpha="1" />

    <ImageView
        android:id="@+id/green_arrow_three"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-18dp"
        android:alpha="0"
        android:src="@drawable/ic_keyboard_arrow_up_green_24dp"
        tool:alpha="1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="0dp"
        android:src="@drawable/ic_call_green24dp"
        app:fabSize="normal" />

    <ImageView
        android:id="@+id/red_arrow_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0"
        android:src="@drawable/ic_keyboard_arrow_down_red_24dp"
        tool:alpha="1" />

    <ImageView
        android:id="@+id/red_arrow_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-18dp"
        android:alpha="0"
        android:src="@drawable/ic_keyboard_arrow_down_red_24dp"
        tool:alpha="1" />

    <ImageView
        android:id="@+id/red_arrow_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-18dp"
        android:alpha="0"
        android:src="@drawable/ic_keyboard_arrow_down_red_24dp"
        tool:alpha="1" />

</LinearLayout>