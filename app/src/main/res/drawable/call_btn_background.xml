<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/before_animation">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/grey"  />
            <corners android:radius="@dimen/_100sdp" />
        </shape>
    </item>
    <item android:id="@+id/clip_drawable">
        <clip
            android:clipOrientation="horizontal"
            android:gravity="start">
            <shape
                android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
                <stroke
                    android:width="@dimen/_1sdp"
                    android:color="@color/colorPrimary"  />
                <padding
                    android:bottom="@dimen/_12sdp"
                    android:left="@dimen/_48sdp"
                    android:right="@dimen/_45sdp"
                    android:top="@dimen/_12sdp" />
                <corners android:radius="@dimen/_100sdp" />
            </shape>
        </clip>
    </item>
</layer-list>