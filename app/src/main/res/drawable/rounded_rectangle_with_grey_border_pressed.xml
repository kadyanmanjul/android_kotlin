<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_shade_of_gray" />
            <corners
                android:bottomLeftRadius="@dimen/_8sdp"
                android:bottomRightRadius="@dimen/_8sdp"
                android:topLeftRadius="@dimen/_8sdp"
                android:topRightRadius="@dimen/_8sdp" />
        </shape>
    </item>
    <item android:bottom="@dimen/_1sdp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/light_shade_of_gray" />
            <padding
                android:bottom="@dimen/_4sdp"
                android:left="@dimen/_4sdp"
                android:right="@dimen/_4sdp"
                android:top="@dimen/_4sdp" />
            <corners
                android:bottomLeftRadius="@dimen/_8sdp"
                android:bottomRightRadius="@dimen/_8sdp"
                android:topLeftRadius="@dimen/_8sdp"
                android:topRightRadius="@dimen/_8sdp" />
        </shape>
    </item>
</layer-list>
