<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="@dimen/_12sdp"
        android:bottom="@dimen/_12sdp"
        android:gravity="center"
        android:left="@dimen/_32sdp"
        android:right="@dimen/_32sdp"
        android:top="@dimen/_6sdp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/pure_white" />
                <stroke
                    android:width="@dimen/_1sdp"
                    android:color="@color/dark_grey" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="@dimen/_minus2sdp"
        android:top="@dimen/_12sdp">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/shadow" />
            <corners android:radius="@dimen/_11sdp" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_2sdp"
        android:top="@dimen/_12sdp">
        <shape android:shape="rectangle">
            <solid android:color="@color/pure_white" />
            <corners android:radius="@dimen/_8sdp" />
            <stroke
                android:width="@dimen/_1sdp"
                android:color="@color/dark_grey" />
        </shape>
    </item>

</layer-list>
