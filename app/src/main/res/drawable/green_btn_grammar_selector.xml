        <layer-list>
            <item android:drawable="@drawable/green_btn_pressed_state" />
            <item android:bottom="@dimen/_1sdp" android:drawable="@drawable/green_btn_unpressed_state" />
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/green_btn_pressed_state" />
            <item android:bottom="@dimen/_5sdp" android:drawable="@drawable/green_btn_unpressed_state" />
        </layer-list>
    </item>
</selector>