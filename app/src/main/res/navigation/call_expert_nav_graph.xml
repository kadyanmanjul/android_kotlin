<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/call_expert_nav_graph"
    app:startDestination="@id/expertListFragment">

    <fragment
        android:id="@+id/walletFragment"
        android:name="com.joshtalks.joshskills.ui.callWithExpert.fragment.WalletFragment"
        android:label="Add money to wallet"
        tools:layout="@layout/fragment_wallet">
        <action
            android:id="@+id/action_walletFragment_to_walletCheckoutFragment"
            app:destination="@id/walletCheckoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/walletCheckoutFragment"
        android:name="com.joshtalks.joshskills.ui.callWithExpert.fragment.WalletCheckoutFragment"
        android:label="WalletCheckoutFragment"
        tools:layout="@layout/fragment_wallet_checkout"/>
    <fragment
        android:id="@+id/expertListFragment"
        android:name="com.joshtalks.joshskills.ui.callWithExpert.view.ExpertListFragment"
        android:label="ExpertListFragment"
        tools:layout="@layout/fragment_expert_list">
        <action
            android:id="@+id/action_expertListFragment_to_walletFragment"
            app:destination="@id/walletFragment" />
    </fragment>
</navigation>