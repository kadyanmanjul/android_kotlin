<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.joshtalks.joshskills.ui.activity_feed.FirstTimeUser" />

        <import type="android.view.View" />

        <variable
            name="itemData"
            type="com.joshtalks.joshskills.ui.activity_feed.model.ActivityFeedResponseFirebase" />

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.activity_feed.ActivityFeedListAdapter.ViewHolder" />
    </data>

    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:rotation="180">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_icon"
            imageResource="@{itemData.photoUrl}"
            android:onClick="@{()->handler.openUserProfileActivity(itemData.mentorId)}"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            tools:src="@color/button_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feed_text"
                partialTextColor="@{itemData.name}"
                fullText="@{itemData.name +' '+ itemData.text}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="@{itemData.name + itemData.text}"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                android:visibility="visible"
                tools:text="Mohit updated a profile picture" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/updated_pic_border"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:src="@drawable/ic_img_border"
                    android:visibility="@{itemData.eventId ==5 ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/updated_pic"
                    updatedImageResource="@{itemData.photoUrl}"
                    android:onClick="@{()->handler.openProfileImageShowFragment(itemData.photoUrl,itemData.mentorId)}"
                    android:layout_width="@dimen/_58sdp"
                    android:layout_height="@dimen/_58sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:visibility="@{itemData.eventId == 5 ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@color/button_color" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/audio_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="#F5FAFF"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:visibility="@{itemData.duration==0? View.GONE : View.VISIBLE}"
                tools:visibility="visible">

                <me.zhanghai.android.materialplaypausedrawable.MaterialPlayPauseButton
                    android:id="@+id/btn_play_pause"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:background="@drawable/play_pause_button_background"
                    android:backgroundTint="@color/button_color"
                    android:contentDescription="@string/play_button_description"
                    android:onClick="@{()->handler.onPlayPauseBtnClick()}"
                    android:padding="@dimen/_4sdp"
                    android:theme="?actionBarTheme"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:progressBackgroundTint="#99CCFF"
                    android:progressDrawable="@drawable/seek_bar_draw"
                    android:thumb="@drawable/seek_thumb"
                    android:thumbTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@id/btn_play_pause"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_play_pause"
                    app:layout_constraintTop_toTopOf="@id/btn_play_pause" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_SemiBold"
                    android:textColor="@color/grey_68"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seek_bar"
                    tools:text="00:07" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/feed_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@{itemData.date.substring(0,5)}"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible"
            tools:text="12:49" />
    </LinearLayout>
</layout>









