<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_248sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_centerInParent="true"
    android:background="@drawable/rounded_rectangle_attach"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_12sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/coupon_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lines="1"
            android:maxLines="1"
            android:text="JOSHIT applied"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Semi_Bold"
            android:textColor="@color/pure_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coupon_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_name_text"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lines="1"
            android:maxLines="1"
            android:text="You saved â‚¹100.00 "
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H2_Bold"
            android:textColor="@color/pure_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/with_this_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_price_text"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:gravity="center"
            android:lineSpacingExtra="0dp"
            android:lines="1"
            android:maxLines="1"
            android:text="with this coupon"
            android:textAlignment="center"
            android:textColor="@color/pure_black"
            android:textSize="@dimen/_15sdp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/got_it_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:stateListAnimator="@null"
            android:layout_below="@+id/with_this_coupon"
            android:text="@string/got_it"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:rippleColor="@color/white" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>