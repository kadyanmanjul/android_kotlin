<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/grey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>


    <androidx.recyclerview.widget.RecyclerView

            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/chatsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/inputLL"
            android:paddingTop="5dp"
            android:clipToPadding="false"
            tools:layout_editor_absoluteX="0dp"/>

    <FrameLayout app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toStartOf="@id/record_button"
                 app:layout_constraintBottom_toBottomOf="parent"
                 android:id="@+id/inputLL"
                 android:layout_width="0dp"
                 android:layout_margin="@dimen/_5sdp"
                 android:layout_height="wrap_content"
                 android:background="@drawable/rect_round"
    >


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

        >

            <androidx.appcompat.widget.AppCompatImageView
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_white_round_36"
                    app:srcCompat="@drawable/happy_face"
                    android:layout_marginLeft="5dp"/>

            <com.vanniktech.emoji.EmojiEditText
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="Type a Message"
                    android:id="@+id/chat_edit"
                    android:imeOptions="actionSend"
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines="3"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_white_round_36"
                    app:srcCompat="@drawable/happy_face"
                    android:layout_marginLeft="5dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_white_round_36"
                    app:srcCompat="@drawable/happy_face"
                    android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </FrameLayout>
    <com.joshtalks.recordview.RecordView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/record_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/rect_round"
            android:visibility="invisible"
            android:id="@+id/record_view"
            android:layout_height="wrap_content"
            app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
            app:slide_to_cancel_arrow_color="#000000"
            app:slide_to_cancel_bounds="10dp"
            app:slide_to_cancel_margin_right="10dp"
            app:slide_to_cancel_text="Slide To Cancel"
            app:counter_time_color="#ff0000"
    />



    <com.joshtalks.recordview.CustomImageButton
            android:layout_marginRight="@dimen/_10sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/inputLL"
            android:id="@+id/record_button"
            android:gravity="center|center_vertical|center_horizontal"
            android:textColor="#fff"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/inputLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/recv_bg_mic"
            android:scaleType="centerInside"
            app:image_first="@drawable/recv_ic_mic_white"
            app:image_second="@drawable/ic_send"


    />









</androidx.constraintlayout.widget.ConstraintLayout>
