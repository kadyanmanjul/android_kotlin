                        app:layout_constraintVertical_bias="0.128"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_pointer11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:drawablePadding="@dimen/_26sdp"
                        android:gravity="center|start"
                        android:text="Only Rs. 499"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_blue_tick_round"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.128"
                        tools:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:text="â‚¹"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/txt_og_price"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="499"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_27ssp"
                    app:layout_constraintBottom_toTopOf="@+id/txt_og_price"
                    app:layout_constraintStart_toEndOf="@+id/txt_currency"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat2"
                    app:layout_constraintVertical_bias="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_og_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:text="@string/price"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
                    android:textColor="#515151"
                    app:layout_constraintBottom_toTopOf="@+id/course_rating"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_saving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="@string/savings"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
                    android:textColor="#A62E2D"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@id/txt_og_price"
                    app:layout_constraintStart_toEndOf="@id/txt_og_price"
                    app:layout_constraintTop_toTopOf="@id/txt_og_price" />

                <com.joshtalks.joshskills.core.custom_ui.JoshRatingBar
                    android:id="@+id/course_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar_selector_v2"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    app:layout_constraintBottom_toBottomOf="@+id/materialTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_total_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="(44,000)"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                    android:textColor="#888888"
                    app:layout_constraintStart_toEndOf="@+id/course_rating"
                    app:layout_constraintTop_toTopOf="@+id/course_rating" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/materialTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:background="@drawable/bg_cta_button"
                    android:gravity="center"
                    android:onClick="@{()->handler.startPayment()}"
                    android:padding="@dimen/_10sdp"
                    android:text="Buy Now"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="1" />

                <FrameLayout
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/transparent_black_alpha_70"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.pnikosis.materialishprogress.ProgressWheel
                        android:layout_width="@dimen/_82sdp"
                        android:layout_height="@dimen/_82sdp"
                        android:layout_gravity="center"
                        wheel:matProg_barColor="@color/button_color"
                        wheel:matProg_fillRadius="true"
                        wheel:matProg_linearProgress="false"
                        wheel:matProg_progressIndeterminate="true"
                        wheel:matProg_rimColor="#33128C7E"
                        wheel:matProg_rimWidth="@dimen/_2sdp" />

