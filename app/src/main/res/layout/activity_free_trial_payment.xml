                        app:layout_constraintBottom_toTopOf="@id/validity_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_saving_2"
                        app:layout_constraintVertical_bias="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_total_reviews_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                        android:textColor="#888888"
                        app:layout_constraintStart_toEndOf="@+id/course_rating_2"
                        app:layout_constraintTop_toTopOf="@+id/course_rating_2"
                        tools:text="(32,861)" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/validity_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="1 Year Validity"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                        android:textColor="#888888"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/course_rating_2" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/see_course_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="See course list >>>"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/subscription_card"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/subscription_card"
                    app:layout_constraintTop_toBottomOf="@id/subscription_card"
                    app:layout_constraintVertical_bias="0.509" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="see_course_list,subscription_card" />

                <FrameLayout
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/transparent_black_alpha_70"
                    android:elevation="@dimen/_2sdp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.pnikosis.materialishprogress.ProgressWheel
                        android:layout_width="@dimen/_82sdp"
                        android:layout_height="@dimen/_82sdp"
                        android:layout_gravity="center"
                        wheel:matProg_barColor="@color/button_color"
                        wheel:matProg_fillRadius="true"
                        wheel:matProg_linearProgress="false"
                        wheel:matProg_progressIndeterminate="true"
                        wheel:matProg_rimColor="#33128C7E"
                        wheel:matProg_rimWidth="@dimen/_2sdp" />

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/floating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/bg_cta_button"
                android:gravity="center"
                android:onClick="@{()->handler.startPayment()}"
                android:padding="@dimen/_10sdp"
                android:text="Buy Now"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/text_view_privacy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_privacy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:onClick="@{()->handler.showPrivacyPolicyDialog()}"
                android:text="@string/privacy_label"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/grey"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/materialTextView"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.9" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
