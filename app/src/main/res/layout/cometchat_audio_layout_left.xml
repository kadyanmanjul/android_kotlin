<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.joshtalks.joshskills.ui.groupchat.uikit.Avatar
        android:id="@+id/iv_user"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        tools:src="@tools:sample/avatars" />

    <RelativeLayout
        android:id="@+id/cv_message_container"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_user"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_toEndOf="@id/iv_user"
        android:background="@drawable/incoming_message_normal_bg"
        android:gravity="center"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="8dp"
            android:paddingBottom="0dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Iron Man"
            tools:visibility="visible" />

        <include
            android:id="@+id/replyLayout"
            layout="@layout/left_reply_message_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp" />

        <View
            android:id="@+id/dummy_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@id/replyLayout"
            android:visibility="invisible" />

        <com.joshtalks.joshskills.ui.groupchat.uikit.AudioV2PlayerView
            android:id="@+id/audio_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dummy_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/_8sdp"
            tools:layout_height="@dimen/_40sdp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_player"
            android:layout_alignEnd="@id/audio_player"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_4sdp"
            android:gravity="end"
            android:maxLines="1"
            android:minWidth="@dimen/_32sdp"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textColor="@color/gray_9E"
            android:textSize="@dimen/_8ssp"
            android:visibility="gone"
            tools:text="11:00 PM"
            tools:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_message_container"
        android:layout_alignStart="@+id/cv_message_container"
        android:layout_marginBottom="@dimen/_4sdp">

        <LinearLayout
            android:id="@+id/reply_avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/thread_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/colorPrimary"
            tools:text="2 replies" />
    </LinearLayout>

</RelativeLayout>
