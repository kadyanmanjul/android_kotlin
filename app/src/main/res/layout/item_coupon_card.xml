<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="item"
            type="com.joshtalks.joshskills.ui.payment.new_buy_page_layout.model.Coupon" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_115sdp"
        android:layout_marginVertical="@dimen/_7sdp"
        android:clipToPadding="true"
        app:cardElevation="@dimen/_8sdp"
        android:shadowColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardMaxElevation="@dimen/_7sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_rectangle_without_solid"
            android:elevation="@dimen/_7sdp">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_coupon_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="ENG10"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4"
                android:textColor="@color/pure_black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_coupon_expire_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="Coupon expires in 30:00 "
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8_Semi_Bold"
                android:textColor="#686E73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_coupon_code" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/dotted_line"
                android:backgroundTint="@color/black_0.7_alpha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_coupon_expire_time" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="APPLY"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Semi_Bold"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coupon_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Use code ENG10 and get 10% off on you purchase."
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8_Semi_Bold"
                android:textColor="#686E73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view3" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/save_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:text="Save â‚¹50 with this code"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8_Semi_Bold"
                android:textColor="#218C38"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/coupon_desc" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>




