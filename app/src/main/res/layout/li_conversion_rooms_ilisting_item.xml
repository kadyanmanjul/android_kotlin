<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/conversation_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Hello Josh Talks" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_call_placeholder"
            app:layout_constraintStart_toStartOf="@id/conversation_topic_name"
            app:layout_constraintTop_toBottomOf="@id/conversation_topic_name" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="40dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_call_placeholder"
            app:layout_constraintStart_toStartOf="@id/photo1"
            app:layout_constraintTop_toTopOf="@id/photo1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/speakers_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/photo2"
            app:layout_constraintTop_toBottomOf="@id/conversation_topic_name" />

        <TextView
            android:id="@+id/users_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/speakers_list"
            app:layout_constraintTop_toBottomOf="@id/speakers_list"
            tools:text="67 / 18" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>