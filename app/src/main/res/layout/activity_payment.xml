<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingPrefix">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.payment.PaymentActivity" />
    </data>

    <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <include layout="@layout/base_toolbar" />


        <com.mindorks.placeholderview.PlaceHolderView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#29000000">

            <com.pnikosis.materialishprogress.ProgressWheel
                    android:layout_width="@dimen/_82sdp"
                    android:layout_height="@dimen/_82sdp"
                    android:layout_gravity="center"
                    wheel:matProg_barColor="@color/button_primary_color"
                    wheel:matProg_fillRadius="true"
                    wheel:matProg_linearProgress="false"
                    wheel:matProg_progressIndeterminate="true"
                    wheel:matProg_rimColor="#33128C7E"
                    wheel:matProg_rimWidth="@dimen/_2sdp" />


        </FrameLayout>


        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/find_more"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/color_success"
                android:gravity="center"
                android:onClick="@{()->handler.buyCourse()}"
                android:paddingStart="@dimen/_36sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_36sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:text="@string/start_course"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_17"
                app:rippleColor="@color/white" />

        <FrameLayout
                android:id="@+id/whatsapp_help_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:visibility="invisible">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/whatsapp_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_whatsapp" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_hide_help"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="end|top"
                    android:background="@drawable/bg_white_round_36"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_cross"
                    android:tint="@color/grey_7A" />
        </FrameLayout>
    </FrameLayout>
</layout>