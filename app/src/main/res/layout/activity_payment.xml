<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingPrefix">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.payment.PaymentActivity" />
    </data>

    <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <include layout="@layout/base_toolbar" />


        <com.mindorks.placeholderview.PlaceHolderView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="@android:color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
                android:background="#29000000"
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <com.pnikosis.materialishprogress.ProgressWheel
                android:layout_width="@dimen/_82sdp"
                android:layout_height="@dimen/_82sdp"
                android:layout_gravity="center"
                wheel:matProg_barColor="@color/button_primary_color"
                wheel:matProg_fillRadius="true"
                wheel:matProg_linearProgress="false"
                wheel:matProg_progressIndeterminate="true"
                wheel:matProg_rimColor="#33128C7E"
                wheel:matProg_rimWidth="@dimen/_2sdp" />
        </FrameLayout>
    </FrameLayout>
</layout>