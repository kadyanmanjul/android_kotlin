<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_1sdp"
    app:layout_constraintEnd_toEndOf="parent">

    <RelativeLayout
        android:id="@+id/cv_message_container"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/outgoing_message_same_bg_groupchat"
        android:paddingStart="@dimen/_6sdp"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/_6sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/replyLayout"
            layout="@layout/right_reply_message_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:visibility="gone" />

        <com.joshtalks.joshskills.ui.groupchat.uikit.AudioV2PlayerView
            android:id="@+id/audio_player"
            android:layout_width="match_parent"
            android:layout_below="@+id/replyLayout"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_2sdp"
            tools:layout_height="@dimen/_40sdp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audio_player"
            android:layout_gravity="center"
            android:layout_toStartOf="@+id/delivery_tick"
            android:gravity="end"
            android:lineSpacingMultiplier="0.5"
            android:maxLines="1"
            android:minWidth="@dimen/_32sdp"
            android:paddingStart="@dimen/_6sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:textColor="@color/gray_9E"
            android:textSize="@dimen/_9ssp"
            android:visibility="visible"
            tools:text="11:00 PM"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/delivery_tick"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_below="@id/audio_player"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:gravity="end"
            app:srcCompat="@drawable/ic_sent_message_d_tick" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/threadReplyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_message_container"
        android:layout_alignEnd="@+id/cv_message_container"
        android:layout_marginBottom="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_message_container">

        <LinearLayout
            android:id="@+id/reply_avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/thread_reply_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/colorPrimary"
            tools:text="2 replies" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
