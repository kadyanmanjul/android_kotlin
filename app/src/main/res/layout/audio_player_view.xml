<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_16sdp"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingEnd="@dimen/_48sdp"
        android:paddingRight="@dimen/_48sdp">

    <FrameLayout
            android:id="@+id/root_sub_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            >

        <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_2sdp"
                android:id="@+id/message_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <com.joshtalks.joshskills.core.custom_ui.audioplayer.view.JcPlayerView
                    android:paddingTop="@dimen/_5sdp"
                    android:id="@+id/audio_view"
                    android:layout_gravity="start"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pause_icon_color="@color/grey_7A"
                    app:play_icon_color="@color/grey_7A"
                    app:seek_bar_color="@color/colorPrimary"
                    app:text_audio_current_duration_color="@color/gray_48"
                    app:text_audio_duration_color="@color/gray_48"
                    />


            <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_4sdp"
                    android:id="@+id/text_message_time"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:gravity="end"
                    android:text="11:40"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textColor="@color/gray_9E"
                    android:textSize="@dimen/font_12"
                    android:visibility="visible"
                     />
        </LinearLayout>

    </FrameLayout>
</FrameLayout>
