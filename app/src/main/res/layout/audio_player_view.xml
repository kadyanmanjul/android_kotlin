<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_80sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp">
    <include
            android:visibility="gone"
            android:id="@+id/audio_view_sent"
            layout="@layout/audio_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />


    <com.joshtalks.joshskills.core.custom_ui.audioplayer.view.JcPlayerView
            android:id="@+id/audio_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/audio_view_received"
            android:layout_toEndOf="@+id/audio_view_sent"
            android:visibility="visible"
            app:pause_icon_color="@color/grey_7A"
            app:play_icon_color="@color/grey_7A"
            app:seek_bar_color="@color/button_primary_color"
            app:seek_bar_progress="@color/textError"
            app:text_audio_current_duration_color="@color/gray_48"
            app:text_audio_duration_color="@color/gray_48" />

    <include
            android:visibility="gone"
            android:id="@+id/audio_view_received"
            layout="@layout/audio_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
</RelativeLayout>
