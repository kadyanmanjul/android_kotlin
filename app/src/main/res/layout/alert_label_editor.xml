<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rectangle_for_clubhouse_images">

    <TextView
        android:id="@+id/add_a_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="top"
        android:text="@string/add_a_topic"
        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4_Semi_Bold_Nunito"
        android:textColor="#1E1D1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/e_g_motivat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="top"
        android:text="@string/e_g_motivation_career_advice"
        android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular_Nunito"
        android:textColor="#1E1D1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_a_topic" />

    <EditText
        android:id="@+id/label_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/background_topic"
        android:inputType="text"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_2sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e_g_motivat" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/create_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/round_rectangle"
        android:backgroundTint="#27AE61"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_43sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:text="@string/let_s_go"
        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4_Semi_Bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_field" />

</androidx.constraintlayout.widget.ConstraintLayout>