<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.voip.new_arch.ui.views.SearchingUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/finding_practise_partner"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:srcCompat="@drawable/have_a_referral" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/_6sdp"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_24sdp"
            android:progressDrawable="@drawable/progress_background"
            android:progressTint="@color/button_color"
            android:secondaryProgress="0"
            app:layout_constraintEnd_toEndOf="@+id/image_view_ph"
            app:layout_constraintStart_toStartOf="@+id/image_view_ph"
            app:layout_constraintTop_toBottomOf="@+id/image_view_ph"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.6"
            tools:max="100"
            tools:progress="40" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="52dp"
            android:textSize="@dimen/_14ssp"
            android:gravity="start"
            android:text="@string/zaruri_jankari"
            android:textAllCaps="false"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:padding="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:gravity="start"
            android:text="@string/searching_info_text"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Semi_Bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_head" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>