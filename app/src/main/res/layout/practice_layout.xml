<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_136sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:animateLayoutChanges="true"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="@dimen/_12sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        app:contentPaddingBottom="@dimen/_6sdp"
        app:contentPaddingLeft="@dimen/_4sdp"
        app:contentPaddingTop="@dimen/_10sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_12sdp"
        card_view:cardElevation="@dimen/_12sdp"
        card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="@dimen/font_17"
                android:clickable="false"
                android:enabled="false"
                android:gravity="start|center"
                android:textColor="@color/gray_48"
                android:textSize="@dimen/font_17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:targetApi="o" />


        <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
                android:id="@+id/textview"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_12sdp"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center_vertical|start"
                android:text="@string/status_with_colon"
                android:textColor="@color/gray_48"
                android:textSize="@dimen/font_13"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />


        <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
                android:id="@+id/tv_practice_status"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_4sdp"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center_vertical|start"
                android:text="@string/answer_not_submitted"
                android:textColor="@color/error_color"
                android:textSize="@dimen/font_13"
                app:layout_constraintStart_toEndOf="@+id/textview"
                app:layout_constraintTop_toTopOf="@+id/textview" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_submit_answer"
                style="@style/Widget.MaterialComponents.Button"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_primary_color"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:gravity="end|center"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/submit_answer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                app:cornerRadius="@dimen/_10sdp"
                app:drawableTint="@color/white"
                app:icon="@drawable/ef_ic_arrow_forward"
                app:iconGravity="end|textEnd"
                app:iconPadding="@dimen/_4sdp"
                app:iconSize="@dimen/_16sdp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="src_in"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:rippleColor="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>