<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/feedback_rectangle"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_feedback_title"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="108dp"
                android:gravity="center"
                android:text="@string/feedback_title"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.8" />



        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="362dp"
                android:layout_height="417dp"
                android:background="@drawable/round_rect_default"
                android:backgroundTint="@color/bubble_background"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="24dp"
                tools:layout_editor_absoluteY="139dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feedback_title"
                    fontPath="fonts/OpenSans-Bold.ttf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/dialog_title"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintHorizontal_bias="0.465"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.8" />

            <RatingBar
                    android:id="@+id/feedback_ratingBar"
                    style="@style/CustomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_title" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/feedback_rating_words"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="303dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="center"
                    android:hint="Very Good"

                    android:textColor="@color/font_color"
                    android:textSize="@dimen/font_17"
                    app:contentPadding="@dimen/_8sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_ratingBar" />


            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/feedback_comment1"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/round_rectangle"
                    android:backgroundTint="@color/bubble_background"
                    android:gravity="center"
                    android:hint="Very Easy"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.142"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_ratingBar" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/feedback_comment2"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/round_rectangle"
                    android:backgroundTint="@color/bubble_background"
                    android:gravity="center"
                    android:hint="Very Difficult"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.39"
                    app:layout_constraintStart_toEndOf="@+id/feedback_comment1"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_ratingBar" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/feedback_comment3"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_rectangle"
                    android:backgroundTint="@color/bubble_background"
                    android:gravity="center"
                    android:hint="Kuch Samajh Nahi Aya"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.289"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_comment1" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/feedback_show_edit_text"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_rectangle"
                    android:backgroundTint="@color/bubble_background"
                    android:gravity="center"
                    android:hint="..."
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintStart_toEndOf="@+id/feedback_comment3"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_comment2" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/submit_feedback_btn"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="216dp"
                    android:background="@drawable/round_rectangle"
                    android:backgroundTint="@color/feedback_submit_background"
                    android:gravity="center"
                    android:paddingStart="@dimen/_24sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_24sdp"
                    android:paddingBottom="@dimen/_12sdp"
                    android:text="@string/submit_answer"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_17"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.536"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_ratingBar"
                    app:rippleColor="@color/white" />

            <EditText
                    android:id="@+id/feedbackEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_25sdp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="Plrase Share your detalied feedback"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="10"
                    android:minLines="3"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/font_11"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.369"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback_ratingBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/feedback_closebtn"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|top"
                android:background="@drawable/bg_white_round_36"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_cross"
                android:tint="@color/grey_7A"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="374dp"
                tools:layout_editor_absoluteY="132dp" />

        <ImageView
                android:id="@+id/check_mark"
                android:layout_width="99dp"
                android:layout_height="82dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/animated_vector_check" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>