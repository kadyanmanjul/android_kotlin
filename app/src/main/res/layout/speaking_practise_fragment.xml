<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.lesson.speaking.SpeakingPractiseFragment" />

        <variable
            name="vm"
            type="com.joshtalks.joshskills.ui.lesson.LessonViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pure_white">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/img_recent_calls_history"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:backgroundTint="@color/surface_information"
                        android:drawableLeft="@drawable/ic_recent_calls"
                        android:elevation="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="@string/recent_calls"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Title_Group_smaller"
                        android:textColor="@color/primary_500"
                        android:visibility="visible"
                        app:cornerRadius="@dimen/_20sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sp_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:gravity="center"
                        android:text="@string/speak_practise_title"
                        android:textAppearance="@style/TextAppearance.JoshTypography.HeadingSemiBold"
                        android:textColor="@color/text_default"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/img_recent_calls_history" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:gravity="start|center"
                        android:text="@string/today_topic"
                        android:textAppearance="@style/TextAppearance.JoshTypography.HeadingSemiBold"
                        android:textColor="@color/text_default"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sp_title" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/rating_view"
                        setRatingText="@{vm.userRating}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:background="@drawable/rounded_rectangle_attach"
                        android:backgroundTint="#ECF4FD"
                        android:gravity="start|center"
                        android:onClick="@{handler::openRatingDialog}"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:textAppearance="@style/TextAppearance.JoshTypography.CaptionSemiBold"
                        android:textColor="@color/primary_500"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_2"
                        tools:text="Your rating:9"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_today_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_42sdp"
                        android:text="@string/today_topic"
                        android:textAppearance="@style/TextAppearance.JoshTypography.BodyRegular16"
                        android:textColor="@color/text_subdued"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rating_view"
                        tools:text="Geeting with New Members" />

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="@dimen/_108sdp"
                        android:layout_height="@dimen/_108sdp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        app:cpb_background_progressbar_color="#ECF4FD"
                        app:cpb_background_progressbar_width="@dimen/_12sdp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="@color/primary_500"
                        app:cpb_progressbar_width="@dimen/_12sdp"
                        app:cpb_round_border="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_today_topic" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/progress_bar_anim"
                        android:layout_width="@dimen/_108sdp"
                        android:layout_height="@dimen/_108sdp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_today_topic"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="lottie/speaking_anim.json"
                        app:lottie_imageAssetsFolder="lottie"
                        app:lottie_loop="false" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/ftu_twenty_min_status"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_175sdp"
                        android:layout_marginVertical="@dimen/_26sdp"
                        android:layout_marginTop="36dp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_today_topic"
                        app:lottie_autoPlay="false"
                        app:lottie_fileName="lottie/not_attempted.json"
                        app:lottie_imageAssetsFolder="lottie"
                        app:lottie_loop="true"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_practise_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.JoshTypography.LargeSemiBold"
                        android:textColor="@color/text_default"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintBottom_toBottomOf="@id/progress_bar"
                        app:layout_constraintEnd_toEndOf="@id/progress_bar"
                        app:layout_constraintStart_toStartOf="@id/progress_bar"
                        app:layout_constraintTop_toTopOf="@id/progress_bar"
                        tools:text="5 / 10 \n min" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_how_to_speak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_24sdp"
                        android:clickable="true"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="@string/how_to_speak"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_SemiBold"
                        android:textColor="@color/primary_500"
                        android:textSize="16.90sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_label_calls_left"
                        tools:visibility="visible" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/bb_tooltip_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="iv_arrow, layout_bb_tip"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_label_calls_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
                        android:textColor="@color/primary_500"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_info_micro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/progress_bar_anim"
                        tools:text="3 calls left"
                        tools:visibility="visible" />

                    <include
                        android:id="@+id/layout_bb_tip"
                        layout="@layout/layout_bb_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_minus3sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/iv_arrow" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/txt_label_calls_left"
                        app:layout_constraintStart_toStartOf="@id/txt_label_calls_left"
                        app:layout_constraintTop_toBottomOf="@id/txt_label_calls_left"
                        app:srcCompat="@drawable/ic_arrow_yellow_stroke" />

                    <include
                        android:id="@+id/info_container"
                        layout="@layout/information_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_bb_tip">

                    </include>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_label_new_student_calls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:text="New Student Calls"
                        android:textAppearance="@style/TextAppearance.JoshTypography.BodySemiBold20"
                        android:textColor="@color/text_default"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/info_container"
                        tools:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/progress_new_student_calls"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:max="7"
                        android:progressDrawable="@drawable/progress_background"
                        android:progressTint="@color/primary_500"
                        android:secondaryProgress="0"
                        android:textAppearance="@style/TextAppearance.JoshTypography.BodyRegular20"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@id/txt_label_new_student_calls"
                        app:layout_constraintStart_toStartOf="@id/txt_label_new_student_calls"
                        app:layout_constraintTop_toBottomOf="@id/txt_label_new_student_calls"
                        tools:max="7"
                        tools:progress="3"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_progress_count"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="3/7"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_SemiBold"
                        android:textColor="@color/text_default"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/progress_new_student_calls"
                        app:layout_constraintEnd_toEndOf="@id/progress_new_student_calls"
                        app:layout_constraintStart_toStartOf="@+id/progress_new_student_calls"
                        app:layout_constraintTop_toTopOf="@+id/progress_new_student_calls"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_calls_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:gravity="center"
                        android:text="4 calls left"
                        android:textAppearance="@style/TextAppearance.JoshTypography.CaptionSemiBold"
                        android:textColor="#BEBEBE"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/progress_new_student_calls"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_label_become_senior_student"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center"
                        android:onClick="@{()->handler.showSeniorStudentScreen()}"
                        android:text="@string/label_become_senior_student2"
                        android:textAppearance="@style/TextAppearance.JoshTypography.BodySemiBold20"
                        android:textColor="@color/primary_500"
                        android:visibility="gone"
                        app:drawableStartCompat="@drawable/ic_info_micro"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_calls_left"
                        tools:visibility="visible" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/block_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:background="@drawable/crd_red_border"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_12sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:visibility="@{vm.blockLiveData == true  ? View.VISIBLE : View.GONE,default=gone}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_label_become_senior_student"
                        tools:visibility="visible">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/block_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="Your Practice Partner service is temporarily disabled"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.JoshTypography.BodySemiBold16"
                            android:textColor="@color/critical"
                            android:textSize="@dimen/_14ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/timer_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:drawablePadding="@dimen/_4sdp"
                            android:drawableTint="@color/critical"
                            android:gravity="center"
                            android:onClick="@{handler::openBlockReasonDialog}"
                            android:text="Check why?"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.JoshTypography.BodySemiBold20"
                            android:textColor="@color/critical"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="visible"
                            app:drawableStartCompat="@drawable/ic_info_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/block_tv" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/cd_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/block_button_round_stroke_red"
                            android:gravity="center"
                            android:paddingHorizontal="@dimen/_20sdp"
                            android:textAppearance="@style/TextAppearance.JoshTypography.CaptionSemiBold"
                            android:textColor="#FF0000"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/timer_tv"
                            tools:ignore="MissingPrefix" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_peer_to_peer_call"
                        style="@style/Secondary_Button_Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:insetBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:insetTop="0dp"
                        app:iconGravity="textStart"
                        app:iconPadding="15dp"
                        app:iconTint="@color/pure_white"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:text="@string/call_practice_partner"
                        android:visibility="@{!vm.blockLiveData  ? View.VISIBLE : View.GONE}"
                        app:layout_constraintBottom_toTopOf="@+id/btn_call_with_expert"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/block_container"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.7"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call_with_expert"
                        style="@style/Secondary_Button_Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:backgroundTint="@color/warning"
                        android:gravity="center"
                        android:insetTop="0dp"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:insetBottom="0dp"
                        android:text="@string/talk_to_expert"
                        android:textColor="@color/text_default"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_peer_to_peer_call"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.7"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_favorite"
                        style="@style/Secondary_Button_Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:gravity="center"
                        android:insetTop="0dp"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:insetBottom="0dp"
                        android:text="@string/call_favorite_practice_partner"
                        android:visibility="@{(vm.isFreeTrialUser()) ? View.VISIBLE : View.GONE}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_call_with_expert"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.7"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_group_call"
                        style="@style/Secondary_Button_Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:gravity="center"
                        android:insetTop="0dp"
                        android:insetBottom="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:text="@string/call_from_group"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_favorite"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.7"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_new_student"
                        style="@style/Secondary_Button_Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:gravity="center"
                        android:insetTop="0dp"
                        android:insetBottom="@dimen/_7sdp"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:text="@string/call_new_student"
                        android:visibility="@{(!vm.blockLiveData &amp;&amp; vm.isNewStudentActive) ? View.VISIBLE : View.GONE, default=gone}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_group_call"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.7"
                        tools:visibility="visible" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_continue"
                        style="@style/Secondary_Button_Filled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:gravity="center"
                        android:insetTop="0dp"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:insetBottom="0dp"
                        android:text="@string/continue_label"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_new_student"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.7"
                        tools:visibility="gone" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:constraint_referenced_ids="text_view_2,tv_today_topic,tv_practise_time,progress_bar,sp_title"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/container_reached_ft_limit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/crd_red_border"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_12sdp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/txt_calls_left"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
                        tools:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_12sdp"
                            android:gravity="center_horizontal"
                            android:text="@string/you_have_reached_limit_freetrial"
                            android:textAlignment="center"
                            android:textColor="@color/critical"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txt_buy_to_continue_calls"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:autoLink="all"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_horizontal"
                            android:text="@string/buy_course_to_continue_calling"
                            android:textAlignment="center"
                            android:textColor="@color/primary_500"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/mark_as_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:src="@drawable/ic_tick_small"
                        android:visibility="gone"
                        app:fabSize="mini"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_view"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_96sdp"
            android:layout_gravity="center"
            app:matProg_barColor="@color/primary_500"
            app:matProg_fillRadius="true"
            app:matProg_linearProgress="false"
            app:matProg_progressIndeterminate="true"
            tools:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/_16sdp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_call_demo"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/primary_500"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingVertical="@dimen/_14sdp"
                android:text="Call Practice Partner"
                android:textAppearance="@style/TextAppearance.JoshTypography.ButtonSemiBold"
                android:textColor="@color/pure_white"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                app:cornerRadius="@dimen/_36sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.7"
                app:rippleColor="@color/pure_white"
                tools:visibility="gone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
