<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.payment.PaymentProcessFragment" />
    </data>

    <ScrollView
            android:id="@+id/main_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <nl.dionsegijn.konfetti.KonfettiView
                    android:id="@+id/view_konfetti"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />

            <RelativeLayout

                    android:id="@+id/rl_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_36sdp"
                    android:visibility="invisible"
                    tools:ignore="MissingPrefix">


                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_84sdp"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/timer_drawable"
                        android:backgroundTint="@color/color_success"
                        android:elevation="@dimen/_4sdp"
                        android:scaleType="center"
                        android:src="@drawable/ic_tick_default"
                        android:tint="@color/white" />

                <com.pnikosis.materialishprogress.ProgressWheel
                        android:layout_width="@dimen/_84sdp"
                        android:layout_height="@dimen/_84sdp"
                        android:layout_centerHorizontal="true"
                        android:elevation="@dimen/_4sdp"
                        app:matProg_barWidth="@dimen/_2sdp"
                        wheel:matProg_barColor="@color/white"
                        wheel:matProg_fillRadius="true"
                        wheel:matProg_progressIndeterminate="true" />

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_48sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:background="#f5f5f5"
                        android:backgroundTint="#f5f5f5"
                        android:elevation="0dp"
                        app:cardBackgroundColor="#f5f5f5"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:contentPaddingBottom="@dimen/_8sdp">

                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_60sdp"
                            android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                                fontPath="fonts/Roboto-Bold.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/thank_you"
                                android:textAlignment="center"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/font_19" />

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_view"
                                fontPath="fonts/Roboto-Medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/payment_process_success"
                                android:textAlignment="center"
                                android:textColor="@color/font_color"
                                android:textSize="@dimen/font_12" />

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_16sdp">

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/dotted_line" />

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="@dimen/_minus8sdp"
                                    android:background="@drawable/timer_drawable"
                                    android:backgroundTint="@color/white"
                                    android:elevation="@dimen/_4sdp"
                                    android:tint="@color/white" />

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="end"
                                    android:layout_marginEnd="@dimen/_minus8sdp"
                                    android:background="@drawable/timer_drawable"
                                    android:backgroundTint="@color/white"
                                    android:elevation="@dimen/_4sdp"
                                    android:tint="@color/white" />

                        </FrameLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_8sdp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/course_image"
                                    android:layout_width="@dimen/_48sdp"
                                    android:layout_height="@dimen/_48sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:src="@color/colorPrimary"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_course"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:ellipsize="marquee"
                                    android:gravity="start|center"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:singleLine="true"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_15"
                                    app:layout_constraintStart_toEndOf="@+id/course_image"
                                    app:layout_constraintTop_toTopOf="@id/course_image" />


                            <androidx.appcompat.widget.AppCompatTextView
                                    fontPath="fonts/Roboto-Light.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:text="@string/amount"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_10"
                                    app:layout_constraintBottom_toTopOf="@+id/tv_amount"
                                    app:layout_constraintStart_toStartOf="@id/tv_amount" />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_amount"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_10"
                                    app:layout_constraintBottom_toBottomOf="@id/course_image"
                                    app:layout_constraintStart_toEndOf="@+id/course_image" />


                            <androidx.appcompat.widget.AppCompatTextView
                                    fontPath="fonts/Roboto-Light.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start"
                                    android:text="@string/status"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_10"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/tv_status"
                                    app:layout_constraintEnd_toEndOf="parent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_status"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:text="@string/paid"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_10"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_8sdp">

                            <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_2sdp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/dotted_line" />

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="@dimen/_minus8sdp"
                                    android:background="@drawable/timer_drawable"
                                    android:backgroundTint="@color/white"
                                    android:elevation="@dimen/_4sdp"
                                    android:tint="@color/white" />

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_16sdp"
                                    android:layout_height="@dimen/_16sdp"
                                    android:layout_gravity="end"
                                    android:layout_marginEnd="@dimen/_minus8sdp"
                                    android:background="@drawable/timer_drawable"
                                    android:backgroundTint="@color/white"
                                    android:elevation="@dimen/_4sdp"
                                    android:tint="@color/white" />

                        </FrameLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_1"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:gravity="start|center"
                                    android:lines="1"
                                    android:text="@string/transaction_status"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_15"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_1"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/timer_drawable"
                                    android:backgroundTint="@color/color_success"
                                    android:elevation="@dimen/_4sdp"
                                    android:padding="@dimen/_4sdp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_tick_default"
                                    android:tint="@color/white"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/text_view_1" />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_2"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="@string/course_payment_label"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_13"
                                    app:layout_constraintBottom_toBottomOf="@+id/image_view_1"
                                    app:layout_constraintStart_toEndOf="@+id/image_view_1"
                                    app:layout_constraintTop_toTopOf="@+id/image_view_1" />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_3"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="@string/done"
                                    android:textColor="@color/color_success"
                                    android:textSize="@dimen/font_13"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/text_view_2" />


                            <View
                                    android:id="@+id/view_1"
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="@dimen/_32sdp"
                                    android:background="@color/color_success"
                                    app:layout_constraintEnd_toEndOf="@+id/image_view_1"
                                    app:layout_constraintStart_toStartOf="@+id/image_view_1"
                                    app:layout_constraintTop_toBottomOf="@+id/image_view_1" />


                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_2"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="@dimen/_18sdp"
                                    android:background="@drawable/ring_drawable"
                                    android:elevation="@dimen/_4sdp"
                                    android:scaleType="fitCenter"
                                    app:layout_constraintEnd_toEndOf="@+id/view_1"
                                    app:layout_constraintStart_toStartOf="@+id/view_1"
                                    app:layout_constraintTop_toBottomOf="@+id/view_1" />

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_4"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="@string/course_started_label"
                                    android:textColor="@color/font_color"
                                    android:textSize="@dimen/font_13"
                                    app:layout_constraintBottom_toBottomOf="@+id/image_view_2"
                                    app:layout_constraintStart_toEndOf="@+id/image_view_2"
                                    app:layout_constraintTop_toTopOf="@+id/image_view_2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_5"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:text="@string/in_progress_label"
                                    android:textColor="@color/color_success"
                                    android:textSize="@dimen/font_13"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/image_view_2" />

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/text_view_6"
                                    fontPath="fonts/Roboto-Bold.ttf"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_16sdp"
                                    android:background="@drawable/round_rect_default"
                                    android:backgroundTint="@color/success_trans"
                                    android:gravity="start|center"
                                    android:padding="@dimen/_6sdp"
                                    android:text="@string/payment_process_info"
                                    android:textColor="@color/gray_79"
                                    android:textSize="@dimen/font_11_5"
                                    app:layout_constraintEnd_toEndOf="@id/text_view_5"
                                    app:layout_constraintStart_toStartOf="@+id/text_view_4"
                                    app:layout_constraintTop_toBottomOf="@+id/text_view_4" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_inbox"
                        fontPath="fonts/OpenSans-SemiBold.ttf"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_payment"
                        android:layout_centerInParent="true"

                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:background="@drawable/round_rectangle"
                        android:backgroundTint="@color/button_primary_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:onClick="@{()->handler.gotToCourse()}"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:text="@string/go_to_course"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"
                        android:visibility="invisible"
                        app:cornerRadius="@dimen/_8sdp"
                        app:rippleColor="@color/white" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/success_iv"
                    android:layout_width="@dimen/_84sdp"
                    android:layout_height="@dimen/_84sdp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/timer_drawable"
                    android:backgroundTint="@color/color_success"
                    android:elevation="@dimen/_4sdp"
                    android:scaleType="center"
                    android:src="@drawable/ic_tick_default"
                    android:tint="@color/white"
                    android:visibility="invisible" />


        </FrameLayout>
    </ScrollView>
</layout>