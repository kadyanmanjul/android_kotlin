<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="SignUpViewModel"
                type="com.joshtalks.joshskills.ui.signup.SignUpViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.joshtalks.joshskills.ui.signup.SignUpStep2Fragment">

        <TextView
                android:layout_marginTop="@dimen/dp15"
                android:textColor="@color/primary_text"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:gravity="center"
                android:textSize="@dimen/font_18"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/verify_your_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
        />


        <TextView
                fontPath="fonts/Roboto-Regular.ttf"
                android:textColor="@color/font_color"
                android:layout_width="0dp"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.8"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textSize="@dimen/font_14"
                android:layout_marginTop="@dimen/dp20"
                android:text="@string/sign_step_e_header"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textView"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/dp20"
                      android:gravity="center"
                      app:layout_constraintTop_toBottomOf="@id/textView2"
                      android:layout_height="wrap_content">

            <EditText

                    android:enabled="false"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:textColor="@color/font_color"
                    android:focusable="false"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:id="@+id/et_country_code"
                    android:clickable="false"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:textSize="@dimen/font_16"
                    android:text="+91"
                    android:gravity="center"
                    android:minWidth="@dimen/dp60"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

            />

            <EditText
                    android:textColor="@color/font_color"
                    android:importantForAutofill="no"
                    app:backgroundTint="@color/colorPrimaryDark"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:maxLines="1"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:inputType="textNoSuggestions|phone"
                    android:maxLength="10"
                    android:id="@+id/et_phone_number"
                    android:hint="      "
                    android:textSize="@dimen/font_16"
                    android:minWidth="@dimen/dp160"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

            />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.28"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/tvNativeLogin"
                android:layout_gravity="center"
                android:backgroundTint="@color/button_primary_color"
                android:background="@drawable/button_native_login"
                android:clickable="true"
                android:gravity="center"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:text="@string/next"
                android:layout_marginBottom="@dimen/dp15"
                android:onClick="@{()->SignUpViewModel.registerPhone()}"
                android:paddingTop="@dimen/dp8"
                android:paddingBottom="@dimen/dp8"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>