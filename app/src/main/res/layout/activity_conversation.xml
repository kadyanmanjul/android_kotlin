<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.chat.ConversationActivity" />

        <variable
            name="viewmodel"
            type="com.joshtalks.joshskills.ui.chat.ConversationViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chat_bg"
        android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimaryDark"
                    android:contentInsetStart="0dp"
                    android:contentInsetLeft="0dp"
                    android:contentInsetEnd="0dp"
                    android:contentInsetRight="0dp"
                    android:elevation="@dimen/_4sdp"
                    android:minHeight="?attr/actionBarSize"
                    app:contentInsetEnd="0dp"
                    app:contentInsetEndWithActions="0dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetRight="0dp"
                    app:contentInsetStart="0dp"
                    app:theme="@style/Theme.GuidelinesCompat.Light.DarkToolbar">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical|start"
                            android:paddingTop="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_6sdp"
                            app:srcCompat="@drawable/ic_arrow_back"
                            tools:visibility="visible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_view_logo"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_toEndOf="@id/iv_back"
                            android:background="@drawable/white_button_round_enabled"
                            android:gravity="center_vertical|start"
                            android:src="@drawable/ic_josh_course"
                            tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_message_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:layout_marginVertical="@dimen/_4sdp"
                            android:layout_toStartOf="@id/iv_call"
                            android:layout_toEndOf="@id/image_view_logo"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="start|center"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4_Semi_Bold"
                            android:textColor="@color/white"
                            tools:text="Spoken English Course" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_notification_dot"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_alignEnd="@id/text_message_title"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/timer_drawable"
                            android:backgroundTint="@color/wa_color"
                            android:gravity="start"
                            android:tint="@color/wh_fc"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:onClick="@{()->handler.practiseOnCall()}"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_group_call"
                            android:tint="@color/white"
                            android:visibility="gone"
                            tools:visibility="visible" />
                </RelativeLayout>

            </com.google.android.material.appbar.MaterialToolbar>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_bar"
            android:layout_below="@+id/toolbar">

            <com.joshtalks.joshskills.core.custom_ui.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srl_direction="bottom">

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/chatRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="true"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:scrollbars="vertical"
                    app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable_rv"
                    app:fastScrollHorizontalTrackDrawable="@drawable/thumb_drawable_rv"
                    app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable_rv"
                    app:fastScrollVerticalTrackDrawable="@drawable/thumb_drawable_rv" />
            </com.joshtalks.joshskills.core.custom_ui.swipyrefreshlayout.library.SwipyRefreshLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/scroll_to_end_button"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_4sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_arrow_down"
                android:visibility="gone"
                app:elevation="@dimen/_4sdp"
                tools:visibility="visible" />
        </FrameLayout>


        <include
            android:id="@+id/attachment_container"
            layout="@layout/attachment_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_above="@+id/bottom_bar"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/inputLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rect_round"
                android:orientation="vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/record_button"
                app:layout_constraintStart_toStartOf="parent">

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/user_replay_suggestion_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/chat_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="true"
                        android:cursorVisible="true"
                        android:focusable="true"
                        android:hint="@string/type_message_hint"
                        android:imeOptions="actionSend"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_9E"
                        android:textCursorDrawable="@color/button_color"
                        tools:targetApi="o" />


                    <FrameLayout
                        android:id="@+id/fl_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="@{()->handler.uploadAttachment()}"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/attachment_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_attachment" />
                    </FrameLayout>

                    <com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout
                        android:id="@+id/quick_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:onClick="@{()->handler.uploadImageByCameraOrGallery()}"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_camera_message" />

                    </com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.joshtalks.recordview.RecordView
                android:id="@+id/record_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rect_round"
                android:visibility="gone"
                app:counter_time_color="#ff0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/record_button"
                app:layout_constraintStart_toStartOf="parent"
                app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                app:slide_to_cancel_arrow_color="#000000"
                app:slide_to_cancel_bounds="10dp"
                app:slide_to_cancel_margin_right="10dp"
                app:slide_to_cancel_text="Slide To Cancel" />


            <com.joshtalks.recordview.CustomImageButton
                android:id="@+id/record_button"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/recv_bg_mic"
                android:backgroundTint="@color/button_color"
                android:scaleType="centerInside"
                android:textColor="#fff"
                android:visibility="visible"
                app:image_first="@drawable/recv_ic_mic_white"
                app:image_second="@drawable/ic_send"
                app:layout_constraintBottom_toBottomOf="@+id/inputLL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/inputLL"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/message_button"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/recv_bg_mic"
                android:backgroundTint="@color/button_color"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_send"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/inputLL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/inputLL"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_send" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>
