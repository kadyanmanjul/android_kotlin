<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.chat.ConversationActivity" />

        <variable
                name="viewmodel"
                type="com.joshtalks.joshskills.ui.chat.ConversationViewModel" />
    </data>


    <RelativeLayout
            android:id="@+id/root_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include layout="@layout/base_toolbar" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/chat_wallpaper"
                android:tintMode="multiply" />


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_bar"
                android:layout_below="@+id/toolbar">

            <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/chatRv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/scroll_to_end_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_down"
                    android:visibility="gone"
                    app:elevation="@dimen/_4sdp" />
        </FrameLayout>


        <include
                android:id="@+id/attachment_container"
                layout="@layout/attachment_bottom_view"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_above="@+id/bottom_bar"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:paddingTop="@dimen/_5sdp">


            <LinearLayout
                    android:id="@+id/inputLL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rect_round"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/record_button"
                    app:layout_constraintStart_toStartOf="parent">

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_white_round_36"
                        android:onClick="@{()->handler.emojiToggle()}">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_emoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/happy_face" />
                </FrameLayout>


                <com.vanniktech.emoji.EmojiEditText
                        android:id="@+id/chat_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="@string/type_message_hint"
                        android:imeOptions="actionSend"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3"
                        android:textColorHint="@color/gray_9E"
                        android:textSize="@dimen/font_17" />


                <FrameLayout
                        android:id="@+id/fl_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="@{()->handler.uploadAttachment()}"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/attachment_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_attachment" />
                </FrameLayout>

                <com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout
                        android:id="@+id/quick_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:onClick="@{()->handler.uploadImageByCameraOrGallery()}"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_camera_message" />

                </com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout>

            </LinearLayout>

            <com.joshtalks.recordview.RecordView
                    android:id="@+id/record_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/rect_round"
                    android:visibility="gone"
                    app:counter_time_color="#ff0000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/record_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                    app:slide_to_cancel_arrow_color="#000000"
                    app:slide_to_cancel_bounds="10dp"
                    app:slide_to_cancel_margin_right="10dp"
                    app:slide_to_cancel_text="Slide To Cancel" />


                <com.joshtalks.recordview.CustomImageButton
                        app:layout_constraintBottom_toBottomOf="@+id/inputLL"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/inputLL"
                        android:id="@+id/record_button"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="end"
                        android:background="@drawable/recv_bg_mic"
                        android:scaleType="centerInside"
                        android:textColor="#fff"
                        android:visibility="visible"
                        app:image_first="@drawable/recv_ic_mic_white"
                        app:image_second="@drawable/ic_send"

                        />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>
