<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.chat.ConversationActivity" />

        <variable
            name="viewmodel"
            type="com.joshtalks.joshskills.ui.chat.ConversationViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/overlay_view"
            layout="@layout/unlock_class_tooltip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tintMode="multiply"
            app:srcCompat="@drawable/chat_bg_final" />

        <LinearLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/call_ongoing_layout" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:contentInsetEnd="0dp"
                android:contentInsetRight="0dp"
                android:elevation="@dimen/_4sdp"
                android:minHeight="?attr/actionBarSize"
                app:contentInsetEnd="0dp"
                app:contentInsetEndWithActions="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetStart="0dp"
                app:theme="@style/Theme.GuidelinesCompat.Light.DarkToolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical|start"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        app:srcCompat="@drawable/ic_arrow_back"
                        tools:visibility="visible" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_view_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_toEndOf="@id/iv_back"
                        android:background="@drawable/white_button_round_enabled"
                        android:gravity="center_vertical|start"
                        android:src="@drawable/ic_josh_course"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_message_title"
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_marginVertical="@dimen/_4sdp"
                        android:layout_toEndOf="@id/image_view_logo"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="start|center"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                        android:textColor="@color/white"
                        tools:text="Spoken English Course" />

                    <!--                    <androidx.appcompat.widget.AppCompatImageView-->
                    <!--                        android:id="@+id/ic_notification_dot"-->
                    <!--                        android:layout_width="@dimen/_8sdp"-->
                    <!--                        android:layout_height="@dimen/_8sdp"-->
                    <!--                        android:layout_alignEnd="@id/text_message_title"-->
                    <!--                        android:layout_marginTop="@dimen/_4sdp"-->
                    <!--                        android:background="@drawable/timer_drawable"-->
                    <!--                        android:backgroundTint="@color/wa_color"-->
                    <!--                        android:gravity="start"-->
                    <!--                        android:tint="@color/wh_fc"-->
                    <!--                        android:visibility="gone"-->
                    <!--                        tools:visibility="gone" />-->

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_icon_referral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="18.00dp"
                        android:layout_toEndOf="@id/text_message_title"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="start"
                        android:tint="@color/white"
                        android:visibility="visible"
                        app:srcCompat="@drawable/icon_referral"
                        tools:visibility="visible" />
                </RelativeLayout>

            </com.google.android.material.appbar.MaterialToolbar>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/free_trial_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_container"
            android:background="#FFFBB9"
            android:elevation="@dimen/_1sdp"
            android:fillAfter="false"
            android:visibility="gone"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/free_trial_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="#FF0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/free_trial_end_in" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/buy_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:background="@drawable/rounded_rectangle_attach_2px"
                android:backgroundTint="#F09436"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:text="Buy now"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/trial_close"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/trial_close"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_cross" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/user_point_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/free_trial_container"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_rectangle_with_border"
            android:backgroundTint="@color/white"
            android:elevation="@dimen/_3sdp"
            android:fillAfter="false"
            android:visibility="gone"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp"
                android:elevation="@dimen/_8sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="0 Points"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/leaderboard_btn_Close"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.38" />

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="#EAE7E7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/leaderboard_txt"
                app:layout_constraintStart_toEndOf="@id/points"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/leaderboard_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp"
                android:elevation="@dimen/_8sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/leaderboard"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/leaderboard_btn_Close"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.45" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/leaderboard_btn_Close"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:padding="@dimen/_2sdp"
                android:tint="@color/grey_68"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_cross" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_bar"
            android:layout_below="@+id/toolbar_container">

            <com.joshtalks.joshskills.core.custom_ui.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srl_direction="bottom">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chatRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_6sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    tools:itemCount="1"
                    tools:listitem="@layout/lesson_progress_stub" />
            </com.joshtalks.joshskills.core.custom_ui.swipyrefreshlayout.library.SwipyRefreshLayout>

            <FrameLayout
                android:id="@+id/lesson_tooltip_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_368sdp"
                android:background="@drawable/bg_tooltip_small_center"
                android:visibility="gone"
                tools:visibility="visible">

                <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_18sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="हमें यहां हर रोज एक नया पाठ मिलेगा"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/scroll_to_end_button"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_4sdp"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:elevation="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_arrow_down"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgGroupChat"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="top|end"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/white_button_round_enabled"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:visibility="gone"
                app:elevation="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_groupchat"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/txtUnreadCount"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="top|end"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:background="@drawable/round_circle_with_border"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_SemiBold"
                android:textColor="@color/white"
                android:textSize="@dimen/_6ssp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="99+"
                tools:visibility="gone" />

        </FrameLayout>

        <include
            android:id="@+id/attachment_container"
            layout="@layout/attachment_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_above="@+id/bottom_bar"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            tools:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/inputLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rect_round"
                android:orientation="vertical"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/record_button"
                app:layout_constraintStart_toStartOf="parent">

                <com.mindorks.placeholderview.PlaceHolderView
                    android:id="@+id/user_replay_suggestion_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_8sdp">


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/chat_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="true"
                        android:cursorVisible="true"
                        android:focusable="true"
                        android:hint="@string/type_message_hint"
                        android:imeOptions="actionSend"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_9E"
                        android:textCursorDrawable="@color/button_color"
                        tools:targetApi="o" />

                    <FrameLayout
                        android:id="@+id/fl_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="@{()->handler.addAttachmentUIUpdate()}"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/attachment_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_attachment" />
                    </FrameLayout>

                    <com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout
                        android:id="@+id/quick_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:onClick="@{()->handler.uploadImageByCameraOrGallery()}"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_camera_message" />

                    </com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.joshtalks.recordview.RecordView
                android:id="@+id/record_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/rect_round"
                android:visibility="gone"
                app:counter_time_color="#ff0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/record_button"
                app:layout_constraintStart_toStartOf="parent"
                app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                app:slide_to_cancel_arrow_color="#000000"
                app:slide_to_cancel_bounds="10dp"
                app:slide_to_cancel_margin_right="10dp"
                app:slide_to_cancel_text="@string/slide_to_cancel" />

            <com.joshtalks.recordview.CustomImageButton
                android:id="@+id/record_button"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/recv_bg_mic"
                android:backgroundTint="@color/button_color"
                android:scaleType="centerInside"
                android:textColor="#fff"
                android:visibility="visible"
                app:image_first="@drawable/recv_ic_mic_white"
                app:image_second="@drawable/ic_send"
                app:layout_constraintBottom_toBottomOf="@+id/inputLL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/inputLL"
                app:layout_constraintVertical_bias="1.0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/message_button"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="@drawable/recv_bg_mic"
                android:backgroundTint="@color/button_color"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/inputLL"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/inputLL"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_send" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/freeTrialExpiryLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/black_gradient"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/_60sdp"
                android:gravity="center"
                android:text="Your Free Trial has ended"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Medium_Bold"
                android:textColor="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/bg_cta_button"
                android:gravity="center"
                android:onClick="@{() -> handler.showFreeTrialPaymentScreen()}"
                android:padding="@dimen/_10sdp"
                android:text="Buy Now"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/text_view_privacy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/overlay_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="@color/transparent_blue_alpha_75"
            android:clickable="true"
            android:elevation="@dimen/_4sdp"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/label_tap_to_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_60sdp"
                android:elevation="@dimen/_8sdp"
                android:shadowColor="#BD6674"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:text="Tap anywhere to continue"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Medium_Bold"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/overlay_leaderboard_container"
            android:layout_alignBottom="@id/overlay_leaderboard_container"
            android:elevation="@dimen/_100sdp"
            tools:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/arrow_animation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_fileName="lottie/leaderboard_arrow.json"
                app:lottie_imageAssetsFolder="lottie"
                app:lottie_loop="true"
