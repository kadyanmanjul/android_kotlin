<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.chat.ConversationActivity" />

        <variable
                name="viewmodel"
                type="com.joshtalks.joshskills.ui.chat.ConversationViewModel" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/context_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/chat_bg"
                android:orientation="vertical">

            <include layout="@layout/base_toolbar" />

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/bottom_bar"
                    android:layout_below="@+id/toolbar">

                <com.joshtalks.joshskills.core.custom_ui.swipyrefreshlayout.library.SwipyRefreshLayout
                        android:id="@+id/refresh_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srl_direction="bottom">


                    <com.mindorks.placeholderview.PlaceHolderView
                            android:id="@+id/chatRv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="true"
                            android:paddingBottom="@dimen/_4sdp"
                            android:scrollbars="vertical" />


                    <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmer_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:shimmer_duration="1700"
                            app:shimmer_tilt="5">

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_8sdp"
                                android:background="#FF7200" />

                    </com.facebook.shimmer.ShimmerFrameLayout>
                </com.joshtalks.joshskills.core.custom_ui.swipyrefreshlayout.library.SwipyRefreshLayout>


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/scroll_to_end_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_arrow_down"
                        android:visibility="gone"
                        app:elevation="@dimen/_4sdp" />
            </FrameLayout>


            <include
                    android:id="@+id/attachment_container"
                    layout="@layout/attachment_bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_above="@+id/bottom_bar"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="gone" />


            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:visibility="visible">


                <LinearLayout
                        android:id="@+id/inputLL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rect_round"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/record_button"
                        app:layout_constraintStart_toStartOf="parent">

                    <com.mindorks.placeholderview.PlaceHolderView
                            android:id="@+id/user_replay_suggestion_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="vertical"
                            android:visibility="gone" />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_white_round_36"
                                android:onClick="@{()->handler.emojiToggle()}">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_emoji"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/happy_face" />
                        </FrameLayout>


                        <com.vanniktech.emoji.EmojiEditText
                                android:id="@+id/chat_edit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:backgroundTint="@android:color/transparent"
                                android:clickable="true"
                                android:focusable="true"
                                android:hint="@string/type_message_hint"
                                android:imeOptions="actionSend"
                                android:inputType="textCapSentences|textMultiLine"
                                android:maxLines="3"
                                android:textColorHint="@color/gray_9E"
                                android:textSize="@dimen/font_17" />


                        <FrameLayout
                                android:id="@+id/fl_attachment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:onClick="@{()->handler.uploadAttachment()}"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/attachment_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/ic_attachment" />
                        </FrameLayout>

                        <com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout
                                android:id="@+id/quick_toggle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:onClick="@{()->handler.uploadImageByCameraOrGallery()}"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/ic_camera_message" />

                        </com.joshtalks.joshskills.core.custom_ui.HidingLinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.joshtalks.recordview.RecordView
                        android:id="@+id/record_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/rect_round"
                        android:visibility="gone"
                        app:counter_time_color="#ff0000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/record_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
                        app:slide_to_cancel_arrow_color="#000000"
                        app:slide_to_cancel_bounds="10dp"
                        app:slide_to_cancel_margin_right="10dp"
                        app:slide_to_cancel_text="Slide To Cancel" />


                <com.joshtalks.recordview.CustomImageButton
                        android:id="@+id/record_button"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/recv_bg_mic"
                        android:scaleType="centerInside"
                        android:textColor="#fff"
                        android:visibility="visible"
                        app:image_first="@drawable/recv_ic_mic_white"
                        app:image_second="@drawable/ic_send"
                        app:layout_constraintBottom_toBottomOf="@+id/inputLL"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/inputLL"
                        app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#AA000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                <com.pnikosis.materialishprogress.ProgressWheel
                        android:layout_width="@dimen/_82sdp"
                        android:layout_height="@dimen/_82sdp"
                        android:layout_gravity="center"
                        wheel:matProg_barColor="@color/button_primary_color"
                        wheel:matProg_fillRadius="true"
                        wheel:matProg_linearProgress="false"
                        wheel:matProg_progressIndeterminate="true"
                        wheel:matProg_rimColor="#00000000" />
            </FrameLayout>
        </RelativeLayout>


        <include layout="@layout/player_controls_panel" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
