<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="MissingPrefix">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.signup.OnBoardActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvNativeLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect_with_black_bound"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.signUp()}"
                android:padding="@dimen/half_margin"
                android:text="@string/login_signup"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Bold"
                android:textColor="@color/black"
                android:visibility="visible"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07"
                app:rippleColor="@color/white" />

        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/welcome_josh_skill_new"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H2"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.185"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.69" />

        <TextView
                android:id="@+id/textView_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="start"
                android:text="@string/splash_sub_string_english"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Bold"
                android:textColor="@color/black"
                app:layout_constraintHorizontal_bias="0.187"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_320sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/man_suitcase"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.12"
                app:layout_constraintWidth_default="percent" />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialButton"
                android:layout_width="185dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:background="@drawable/round_rectangle_for_course_expo"
                android:backgroundTint="@color/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.openCourseExplore()}"
                android:text="@string/start_now"
                android:textAppearance="@style/TextAppearance.JoshTypography.Button"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.146"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_sub"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.45" />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/have_a_referral_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.openReferralDialogue()}"
                android:text="@string/have_a_referral_code"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Bold"
                android:textColor="@color/button_color"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.187"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialButton"
                app:layout_constraintVertical_bias="0.3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.45"
                tools:visibility="visible" />

        <FrameLayout
                android:id="@+id/parent_Container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
