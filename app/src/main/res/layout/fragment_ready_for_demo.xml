<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.introduction.ReadyForDemoClassFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/be_calm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="तो क्या आप अंग्रेजी बोलने\n के मास्टर बनने के लिए\n तैयार है?"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H3"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/excited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/rounded_state_button_bg"
            android:drawableEnd="@drawable/ic_baseline_arrow_right"
            android:drawablePadding="@dimen/_28sdp"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:onClick="@{()->handler.startDemoSpeakingClass()}"
            android:paddingTop="@dimen/_9sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_22sdp"
            android:paddingRight="@dimen/_9sdp"
            android:text="@string/yes_excited"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.Button"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/existing_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/existing_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_77sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:onClick="@{()->handler.startOnBoading()}"
            android:text="@string/existing_user"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Medium_Regular"
            android:textColor="@color/grey"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_goneMarginBottom="@dimen/_8sdp"
            app:rippleColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

