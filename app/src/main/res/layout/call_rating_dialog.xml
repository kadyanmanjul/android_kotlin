<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_25sdp">

        <RadioGroup
            android:id="@+id/rating_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_26sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_11sdp"
            android:background="#F9F9F9"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/call_duration_text">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/ten"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_background"
                android:button="@drawable/transparent"
                android:checked="false"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/text_default" />
        </RadioGroup>

        <TextView
            android:id="@+id/call_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/you_spoke_for_minutes"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.JoshTypography.BodyRegular20"
            android:textColor="#333333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/how_call_txt" />

        <TextView
            android:id="@+id/how_call_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11sdp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/how_was_your_call_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5_Semi_Bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c_image" />

        <TextView
            android:id="@+id/very_bad_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/very_bad"
            android:textAppearance="@style/TextAppearance.JoshTypography.Title_Group"
            android:textColor="@color/critical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_list" />

        <TextView
            android:id="@+id/excellent_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:text="@string/excellent"
            android:textAppearance="@style/TextAppearance.JoshTypography.Title_Group"
            android:textColor="@color/decorative_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_list" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:paddingHorizontal="@dimen/_3sdp"
            android:text="@string/block_caller"
            android:textAllCaps="false"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/text_default"
            android:visibility="gone"
            android:background="@drawable/block_button_round_stroke"
            app:cornerRadius="@dimen/_18sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/very_bad_text" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/primary_500"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_40sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/submit_call_rating"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/pure_white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/block"
            app:rippleColor="@color/pure_white"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:src="@drawable/ic_cross_rating"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="@dimen/_14sdp"
            tools:visibility="visible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/c_image"
            android:layout_width="@dimen/_49sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_marginTop="@dimen/_23sdp"
            android:background="@drawable/circle"
            android:src="@drawable/ic_call_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>