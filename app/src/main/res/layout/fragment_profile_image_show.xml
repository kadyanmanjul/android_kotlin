<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_quiz"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20000000"
        android:gravity="start|center"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/Theme.GuidelinesCompat.Light.DarkToolbar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_cross" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_vertical|start"
            android:singleLine="true"
            android:text=""
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5"
            android:textColor="@color/white"
            tools:text="Spoken English Course" />
    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/big_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:src="@drawable/josh_skill" />

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F2F2F5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="bottom"
        android:visibility="gone"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/delete_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_delete_profile_icon" />

            <TextView
                android:id="@+id/delete_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_11sdp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Delete" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_as_profile_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/set_as_profile_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_13sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_set_as_profile_icon" />

            <TextView
                android:id="@+id/set_as_profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/_11sdp"
                android:text="Set as profile photo" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


