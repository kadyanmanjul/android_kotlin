<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/_46sdp"
    android:paddingVertical="@dimen/_6sdp"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_21sdp"
    tools:ignore="UnusedAttribute">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_category_icon"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:gravity="start|center"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.JoshTypography.BodySemiBold20"
        android:textColor="@color/text_default"
        app:layout_constraintBottom_toBottomOf="@+id/iv_category_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_category_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_category_icon"
        tools:text="Call Helpline" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>

