<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        android:elevation="@dimen/_4sdp"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:theme="@style/Theme.GuidelinesCompat.Light.DarkToolbar">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_7sdp"
            android:paddingEnd="@dimen/_7sdp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical|start"
                android:paddingTop="@dimen/_6sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_arrow_back"
                app:tint="@color/black"
                tools:visibility="visible" />


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_message_title"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@id/iv_back"
                android:autoSizeMaxTextSize="@dimen/font_18"
                android:ellipsize="marquee"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="start"
                android:padding="@dimen/_4sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                tools:text="@string/order_summary" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/apply_coupon"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Small_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:autoSizeMaxTextSize="@dimen/font_12"
                android:ellipsize="marquee"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="end"
                android:visibility="gone"
                android:text="@string/apply_coupon"
                android:textColor="@color/colorPrimary"
                tools:text="@string/apply_coupon"
                tools:visibility="visible" />

    </RelativeLayout>

</com.google.android.material.appbar.MaterialToolbar>
