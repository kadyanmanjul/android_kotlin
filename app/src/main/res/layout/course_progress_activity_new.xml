<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.course_progress_new.CourseProgressActivityNew" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:padding="@dimen/_8sdp">

        <include
            android:id="@+id/include"
            layout="@layout/progress_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pdf_view"
            android:visibility="visible"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_16sdp"
            app:layout_constraintBottom_toTopOf="@+id/progress_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/pdf_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="@dimen/_6sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_pdf" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pdf_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Pdf name will be shown here"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Medium_Bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pdf_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/download_container"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/pdf_icon"
                app:layout_constraintTop_toBottomOf="@+id/pdf_name_tv">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_start_download"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_pdf_bg"
                    android:padding="@dimen/_6sdp"
                    android:tint="#7A7A7A"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_download" />

                <com.pnikosis.materialishprogress.ProgressWheel
                    android:id="@+id/progress_dialog"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:matProg_barWidth="@dimen/_2sdp"
                    android:padding="@dimen/_4sdp"
                    tools:visibility="gone"
                    wheel:matProg_barColor="#878A91"
                    wheel:matProg_fillRadius="true"
                    wheel:matProg_progressIndeterminate="true" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_cancel_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:padding="@dimen/_6sdp"
                    android:focusable="true"
                    android:onClick="@{()->handler.downloadCancel()}"
                    android:tint="#878A91"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_cross"
                    tools:visibility="gone" />

            </FrameLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/page_count_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="238 pages"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/text_light_ac"
                app:layout_constraintStart_toEndOf="@+id/download_container"
                app:layout_constraintTop_toBottomOf="@+id/pdf_name_tv" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/size_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ct_unselected_dot"
                android:drawablePadding="@dimen/_8sdp"
                android:text="24Kb"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/text_light_ac"
                app:layout_constraintStart_toEndOf="@+id/page_count_tv"
                app:layout_constraintTop_toBottomOf="@+id/pdf_name_tv" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:drawableStart="@drawable/ct_unselected_dot"
                android:drawablePadding="@dimen/_8sdp"
                android:text="PDF"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/text_light_ac"
                app:layout_constraintStart_toEndOf="@+id/size_tv"
                app:layout_constraintTop_toBottomOf="@+id/pdf_name_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/progress_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:text="@string/lessons"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pdf_view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/progress_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_title_tv"
            tools:listitem="@layout/progress_activity_adapter_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
