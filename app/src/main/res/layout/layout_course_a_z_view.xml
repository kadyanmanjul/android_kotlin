<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/course_padding_dimen"
    android:layout_marginVertical="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4"
        android:textColor="@color/demo_app_black_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Course ka A-Z" />


    <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="start"
        android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
        android:textColor="#3D3D3D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="The course has 90 lessons with each lesson divided like this. Click on a tab to know more" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/start_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/rounded_state_button_bg"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_40sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.JoshTypography.Button"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_goneMarginBottom="@dimen/_8sdp"
        app:rippleColor="@color/white"
        tools:text="Start Demo Lesson" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/completed_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/rounded_state_button_bg"
        android:backgroundTint="@color/light_shade_of_gray"
        android:drawableRight="@drawable/ic_tick_extra_smallest"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Demo Lesson Completed"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.JoshTypography.Button"
        android:textColor="#4E4E4E"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:drawableTint="#25D366"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_goneMarginBottom="@dimen/_8sdp"
        app:rippleColor="@color/white"
        tools:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>
