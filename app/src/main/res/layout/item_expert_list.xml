<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.joshtalks.joshskills.ui.callWithExpert.model.ExpertListModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:strokeColor="@color/disabled"
        app:strokeWidth="@dimen/_1sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/expert_image"
                expertImage="@{item}"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/josh_skill"
                app:civ_border_color="@color/disabled"
                app:civ_border_width="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/josh_skill" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/expert_image"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expert_experience"
                    style="@style/TextAppearance.JoshTypography.CaptionSemiBold"
                    setExperienceYears="@{item}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_16sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_subdued"
                    tools:text="141 Expert calls taken" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expert_name"
                    style="@style/TextAppearance.JoshTypography.HeadingSemiBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_24sdp"
                    android:maxLines="1"
                    android:text="@{item.expertName}"
                    tools:text="Sagar Jain" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/expert_bio"
                    style="@style/TextAppearance.JoshTypography.CaptionRegular"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_16ssp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/text_subdued"
                    tools:text="English For SSC Â· Spoken English" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expert_price_per_minute"
                style="@style/TextAppearance.JoshTypography.BodySemiBold20"
                setPricePerMinute="@{item}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/linearLayout3"
                app:layout_constraintTop_toBottomOf="@id/linearLayout3"
                tools:text="\u20B9 78/min" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/expert_call_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:backgroundTint="@color/surface_information"
                android:text="Call now"
                android:textAppearance="@style/TextAppearance.JoshTypography.CaptionSemiBold"
                android:textColor="@color/primary_500"
                app:cornerRadius="@dimen/_20sdp"
                app:icon="@drawable/ic_pick_call"
                app:iconSize="@dimen/_12sdp"
                app:iconTint="@color/primary_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
