<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.repository.server.assessment.AssessmentQuestionResponse" />
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.joshtalks.joshskills.ui.assessment.viewholder.QuestionView
                    android:id="@+id/question_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <com.joshtalks.joshskills.ui.assessment.viewholder.ChoiceView
                    android:id="@+id/choice_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp" />

        </LinearLayout>

    </ScrollView>

</layout>
