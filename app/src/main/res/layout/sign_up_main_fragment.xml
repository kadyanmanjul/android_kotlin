<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.sign_up_old.SignUpStepMainFragment" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context="com.joshtalks.joshskills.ui.signup.SignUpStep1Fragment">


        <TextView
                android:id="@+id/text_view_1"
                fontPath="fonts/Roboto-Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/half_margin"
                android:gravity="center"
                android:text="@string/join_social_text"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.9" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_google"
                style="@style/Widget.MaterialComponents.Button"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_with_black_bound"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_google_icon"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{()->handler.googleLogin()}"
                android:paddingTop="@dimen/_8sdp"
                android:layout_marginTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/google"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_13"
                android:maxLines="1"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_1"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.3"
                app:rippleColor="@color/white"
                tools:ignore="RtlHardcoded" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_facebook"
                style="@style/Widget.MaterialComponents.Button"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rect_with_black_bound"
                android:backgroundTint="#34589D"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_facebook"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.facebookLogin()}"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/facebook"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13"
                android:maxLines="1"
                app:cornerRadius="@dimen/_4sdp"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_google"
                app:layout_constraintTop_toBottomOf="@+id/text_view_1"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.7"
                app:rippleColor="@color/white"
                tools:ignore="RtlHardcoded" />

        <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_rectangle_81"
                android:drawableRight="@drawable/ic_rectangle_81"
                android:gravity="center"
                android:text="or"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_google"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                tools:ignore="KeyboardInaccessibleWidget,RtlHardcoded" />

        <TextView
                android:id="@+id/text_view_2"
                fontPath="fonts/Roboto-Regular.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_margin"
                android:gravity="center"
                android:text="@string/confirm_number"
                android:textColor="@color/black"
                android:textSize="@dimen/font_20"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/et_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rect_with_black_bound"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_view_2"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.9">


            <com.joshtalks.joshskills.ui.signup.countrycodepicker.CountryCodePicker
                    android:id="@+id/country_code_picker"
                    android:layout_width="36dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="end"
                    android:padding="@dimen/_6sdp"
                    app:ccpDialog_allowSearch="true"
                    app:ccpDialog_backgroundColor="@color/white"
                    app:ccpDialog_fastScroller_bubbleColor="@color/white"
                    app:ccpDialog_fastScroller_handleColor="@color/colorPrimary"
                    app:ccpDialog_initialScrollToSelection="true"
                    app:ccpDialog_keyboardAutoPopup="false"
                    app:ccpDialog_searchEditTextTint="@color/seek_bar_background"
                    app:ccpDialog_showCloseIcon="true"
                    app:ccpDialog_showFastScroller="true"
                    app:ccpDialog_showFlag="true"
                    app:ccpDialog_showPhoneCode="true"
                    app:ccpDialog_showTitle="false"
                    app:ccpDialog_textColor="@color/font_color"
                    app:ccp_arrowColor="@color/button_activated"
                    app:ccp_arrowSize="@dimen/_2sdp"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_autoDetectLanguage="true"
                    app:ccp_autoFormatNumber="false"
                    app:ccp_clickable="true"
                    app:ccp_contentColor="@color/font_color"
                    app:ccp_countryAutoDetectionPref="SIM_LOCALE"
                    app:ccp_countryPreference="IN"
                    app:ccp_defaultLanguage="ENGLISH"
                    app:ccp_defaultNameCode="IN"
                    app:ccp_flagBorderColor="@color/transparent"
                    app:ccp_hintExampleNumber="false"
                    app:ccp_rememberLastSelection="true"
                    app:ccp_showArrow="false"
                    app:ccp_showFlag="true"
                    app:ccp_showFullName="false"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="false"
                    app:ccp_textGravity="RIGHT"
                    app:ccp_textSize="@dimen/font_15"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/input_layout_password"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.1" />

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintWidth_percent="0.6">

                <com.joshtalks.joshskills.core.custom_ui.PrefixEditText
                        android:id="@+id/mobile_et"
                        fontPath="fonts/Roboto-Regular.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="start|center"
                        android:imeOptions="actionDone"
                        android:importantForAutofill="no"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLength="13"
                        android:minWidth="@dimen/_180sdp"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/font_17"
                        app:backgroundTint="@color/white"
                        app:prefix="+91 " />


            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                    android:id="@+id/btn_clear"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@color/white"
                    android:src="@drawable/ic_cross"
                    android:tint="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.339"
                    app:layout_constraintStart_toEndOf="@+id/input_layout_password"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
                android:id="@+id/info"
                fontPath="fonts/Roboto-Regular.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/otp_info"
                android:textColor="@color/gray_79"
                android:textSize="@dimen/font_14"
                app:layout_constraintBottom_toTopOf="@+id/btn_login"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_container"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.9" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/Widget.MaterialComponents.Button"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:padding="@dimen/half_margin"
                android:background="@drawable/rect_with_black_bound"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.sendOtpToMobile()}"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/send_otp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_15"
                app:cornerRadius="@dimen/_4sdp"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_container"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.75"
                app:rippleColor="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>