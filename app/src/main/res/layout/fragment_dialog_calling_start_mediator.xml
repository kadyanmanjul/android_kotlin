<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.assessment.AssessmentActivity">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.voip.extra.CallingStartMediatorDialog" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:background="@drawable/rounded_rectangle_attach"
            android:backgroundTint="@color/button_color"
            android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wb_incandescent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:text="@string/mediator_screen_title"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/image_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/image_view"
                    app:layout_constraintTop_toTopOf="@+id/image_view"
                    app:rippleColor="@color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.joshtalks.joshskills.core.custom_ui.RipplePulseRelativeLayout
                android:id="@+id/ripple_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                app:pulse_layout_PulseDuration="1000"
            app:pulse_layout_PulseType="fill"
            app:pulse_layout_RippleColor="@color/button_color"
            app:pulse_layout_RippleEndRadiusPercent="220"
                app:pulse_layout_RippleStartRadiusPercent="5"
                app:pulse_layout_ShowPreview="true">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_ph"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle2"
                    android:src="@color/button_color"
                    tools:src="@color/button_color" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/have_a_referral"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Medium_Bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_60ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.4" />


        </com.joshtalks.joshskills.core.custom_ui.RipplePulseRelativeLayout>


        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_view_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_32sdp"
                android:gravity="center"
                android:text="Practice Partner Selected!â€¨Call Starting"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H4_Semi_Bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ripple_bg"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.8"
                app:rippleColor="@color/white" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_action"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_16sdp"
                android:backgroundTint="@color/red_color"
                android:gravity="center"
                android:onClick="@{()->handler.stopCalling()}"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:text="@string/stop"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Normal"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_36sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.6"
                app:rippleColor="@color/white">

        </com.google.android.material.button.MaterialButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>