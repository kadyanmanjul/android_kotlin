<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.joshtalks.joshskills.quizgame.ui.data.FavouriteDemoData" />

        <variable
            name="clickHandler"
            type="com.joshtalks.joshskills.quizgame.ui.main.adapter.FavouriteAdapter" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/_49sdp"
                android:layout_height="@dimen/_49sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:src="@drawable/ic_game_back" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_image">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="@string/user_name"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H9"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_name"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Inactive"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Bold"
                    android:textColor="#16CBCE" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_25sdp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/click_token"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_plus1"
                    android:visibility="invisible"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"

                    />
            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
