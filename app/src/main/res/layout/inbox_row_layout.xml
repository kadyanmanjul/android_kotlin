<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:elevation="0dp"
        android:enabled="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="0dp"
        app:contentPaddingRight="0dp"
        app:contentPaddingTop="0dp"
        tools:cardBackgroundColor="@color/white"
        tools:cardPreventCornerOverlap="false">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_15sdp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                tools:src="@color/button_color" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                fontPath="fonts/Poppins-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toStartOf="@id/tv_last_message_time"
                android:layout_toEndOf="@id/profile_image"
                android:ellipsize="end"
                android:inputType="none"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                tools:ignore="MissingPrefix"
                tools:text="Course Name" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tv_last_message_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_toEndOf="@id/profile_image"
                android:gravity="start" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_message"
                fontPath="fonts/Poppins-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@id/tv_last_message_status"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_14"
                tools:ignore="MissingPrefix"
                tools:text="Click to start the course" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/font_12" />

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_last_message"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:textSize="@dimen/font_11_5" />

        <LinearLayout
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/profile_image"
                android:layout_marginStart="@dimen/_60sdp"
                android:background="@color/gray_e6"
                android:orientation="horizontal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
