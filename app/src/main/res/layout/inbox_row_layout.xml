<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/chat_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_15sdp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            fontPath="fonts/OpenSans-SemiBold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toStartOf="@id/tv_last_message_time"
            android:layout_toEndOf="@id/profile_image"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_18_2"
            tools:ignore="MissingPrefix" />


    <androidx.appcompat.widget.AppCompatImageView
            android:gravity="start"
            android:id="@+id/tv_last_message_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_image"
           />



    <TextView
            android:gravity="start"
            android:id="@+id/tv_last_message"
            fontPath="fonts/OpenSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@id/tv_last_message_status"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/gray_79"
            android:textSize="@dimen/font_15" />

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tv_last_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_name"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:text=""
            android:textSize="@dimen/font_12"

            />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_last_message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text=""
            android:textSize="@dimen/font_12"

            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/profile_image"
            android:layout_marginStart="62dp"
            android:background="@color/gray_e6"
            android:orientation="horizontal" />


</RelativeLayout>
