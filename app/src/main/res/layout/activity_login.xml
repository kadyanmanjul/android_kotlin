<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:ignore="MissingPrefix">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.sign_up_old.LoginActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">


        <TextView

                android:id="@+id/textView"
                fontPath="fonts/OpenSans-SemiBold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_110sdp"
                android:gravity="center"
                android:text="@string/welcome_josh_skill"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_22"
                app:layout_constraintBottom_toTopOf="@id/image_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        <TextView
                android:id="@+id/textView_sub"
                fontPath="fonts/OpenSans-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center"
                android:text="@string/splash_sub_string"
                android:textColor="@color/button_primary_color"
                android:textSize="@dimen/font_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />


        <ImageView
                android:id="@+id/image_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/app_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.6" />


        <com.google.android.material.button.MaterialButton
                android:id="@+id/tvNativeLogin"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/button_native_login"
                android:backgroundTint="@color/button_primary_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.signUp()}"
                android:text="@string/login_with_otp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_truecaller_login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.85" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_truecaller_login"
                style="@style/Widget.MaterialComponents.Button"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_width="0dp"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/button_primary_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.verifyViaTrueCaller()}"
                android:text="@string/login_with_truecaller_label"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                android:textStyle="bold"
                android:visibility="gone"
                app:cornerRadius="@dimen/_4sdp"
                app:icon="@drawable/truecaller_app_icon"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/_10sdp"
                app:iconSize="@dimen/_14sdp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="multiply"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.85"
                app:rippleColor="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>