<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/be_calm"
            fontPath="fonts/OpenSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_22"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="37dp"
            tools:text="Be Calm"
            wheel:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dont_close"
            fontPath="fonts/OpenSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/be_calm"
            tools:text="&amp; Don't Close this window"
            wheel:layout_constraintHorizontal_bias="0.497"
            wheel:layout_constraintStart_toStartOf="parent"
            wheel:layout_constraintTop_toBottomOf="@+id/be_calm" />

    <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/payment_processing"
            tools:ignore="ContentDescription"
            wheel:layout_constraintEnd_toEndOf="parent"
            wheel:layout_constraintHorizontal_bias="0.492"
            wheel:layout_constraintStart_toStartOf="parent"
            wheel:layout_constraintTop_toBottomOf="@+id/dont_close" />

    <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/_82sdp"
            android:layout_height="@dimen/_82sdp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            wheel:layout_constraintEnd_toEndOf="parent"
            wheel:layout_constraintStart_toStartOf="parent"
            wheel:layout_constraintTop_toBottomOf="@+id/image"
            wheel:matProg_barColor="@color/button_primary_color"
            wheel:matProg_fillRadius="true"
            wheel:matProg_linearProgress="false"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_rimColor="#33128C7E"
            wheel:matProg_rimWidth="@dimen/_2sdp" />
    5

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/info"
            fontPath="fonts/OpenSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            tools:text="We are processing your payment.\n This may take some time"
            wheel:layout_constraintStart_toStartOf="parent"
            wheel:layout_constraintTop_toBottomOf="@+id/progress_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>