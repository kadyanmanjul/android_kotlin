<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:paddingEnd="@dimen/_7sdp">

    <LinearLayout
        android:id="@+id/special_practice_card"
        android:layout_width="@dimen/_253sdp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/round_rect_default"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_rect_default"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_star"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_49sdp"
                android:background="@drawable/ic_wave_special_new"
                android:paddingTop="@dimen/_8sdp"
                app:srcCompat="@drawable/ic_frame_stars_new" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_both_bottom_bg"
                android:paddingHorizontal="@dimen/_6sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:backgroundTint="@color/special_card_color"
                android:text="@string/special_practice_text"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal"
                android:textColor="@color/pure_black" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_start_special_practice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:text="Start Special Practice"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Semi_Bold"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>