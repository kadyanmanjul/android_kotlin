<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_card"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@drawable/ic_coupon_card_gary">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/josh_skill_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_21sdp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_apply">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coupon_discount_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get 10% Off"
                android:textAppearance="@style/TextAppearance.JoshTypography.CaptionSemiBold"
                android:textColor="@color/text_default" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/coupon_expire_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:lines="2"
                android:text="Coupon will expire in 30:00 minutes "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.JoshTypography.CaptionRegular"
                android:textColor="@color/text_subdued" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_11sdp"
            android:text="Apply"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Semi_Bold"
            android:textColor="@color/primary_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="false" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>



