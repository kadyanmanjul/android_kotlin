<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_106sdp"
    android:clickable="true"
    android:layout_margin="@dimen/_10sdp"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardUseCompatPadding="false"
    app:strokeColor="@color/price_card_stroke"
    app:strokeWidth="@dimen/_1sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_goal_icon"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:tint="@color/light_grey"
            app:srcCompat="@drawable/ic_play_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_play_24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingHorizontal="@dimen/_4sdp"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="@+id/iv_goal_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_goal_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_goal_icon"
            tools:text="Government Edfvkjdfbvjkdbkdfvbdfkvxam Betdkfjvbfdkbvter Job" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
</layout>
