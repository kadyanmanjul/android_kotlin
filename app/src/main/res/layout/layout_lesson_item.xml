<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_fl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:paddingStart="@dimen/cell_left_start_padding"
    android:paddingEnd="@dimen/cell_left_end_padding">

    <ViewStub
        android:id="@+id/lesson_complete_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout="@layout/lesson_complete_stub" />

    <ViewStub
        android:id="@+id/lesson_progress_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout="@layout/lesson_progress_stub" />


</FrameLayout>


