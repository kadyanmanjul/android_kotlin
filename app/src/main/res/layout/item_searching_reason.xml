<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reason_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipToPadding="true"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reason_image"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/white_button_round_enabled"
            android:src="@drawable/ic_phone_icon"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reason_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_11sdp"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7_Semi_Bold"
            android:textColor="@color/pure_black"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="@+id/reason_image"
            app:layout_constraintStart_toEndOf="@+id/reason_image"
            app:layout_constraintTop_toTopOf="@+id/reason_image"
            tools:text="Avoid short calls" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reason_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/_6sdp"
            android:textAppearance="@style/TextAppearance.JoshTypography.CaptionRegular"
            android:textColor="@color/dark_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reason_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_title"
            tools:text="Have longer conversations in English with your partner. Kyoki, English bolne se aati hai." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reason_optional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_14sdp"
            android:drawablePadding="@dimen/_6sdp"
            android:drawableLeft="@drawable/ic_bullet"
            android:textAppearance="@style/TextAppearance.JoshTypography.CaptionRegular"
            android:textColor="@color/dark_text_color"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reason_image"
            app:layout_constraintTop_toBottomOf="@+id/tv_reason_desc"
            tools:text="Have longer conversations in English with your partner. Kyoki, English bolne se aati hai." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>