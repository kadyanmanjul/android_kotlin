<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.voip.new_arch.ui.views.CallFragment">
    <data>
        <import type="android.view.View"/>
        <import type="com.joshtalks.joshskills.base.constants.ConstantsKt"/>
        <import type="com.joshtalks.joshskills.voip.data.RecordingButtonState" />

        <import type="com.joshtalks.joshskills.voip.Utils" />

        <variable
            name="vm"
            type="com.joshtalks.joshskills.ui.voip.new_arch.ui.viewmodels.VoiceCallViewModel" />

        <variable
            name="callFragment"
            type="com.joshtalks.joshskills.ui.voip.new_arch.ui.views.CallFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        setCallBackground="@{vm.uiState.type}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="#0D5CB8">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/topic_viewpager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_10sdp"
            android:visibility="gone"
            setViewPagerAdapter="@{vm.uiState.topicImage}"
            app:layout_constraintBottom_toTopOf="@+id/bottom_card_view"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/topic_header" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:text="Next Word"
                    android:textAllCaps="false"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </androidx.viewpager2.widget.ViewPager2>

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/next_topic_btn"
            android:layout_margin="@dimen/_10sdp"
            android:onClick="@{vm::getNewTopicImage}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/topic_viewpager"
            app:layout_constraintEnd_toEndOf="@+id/topic_viewpager"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/topic_btn_blue"
            app:srcCompat = "@drawable/ic_arrow_back"
            android:rotation="180"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="1"
            android:text="Practice Partner Call"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/caller_name"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            tools:ignore="MissingPrefix"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text='@{vm.uiState.startTime &lt;= 0 ? "" :  vm.uiState.name}'
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Normal"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@id/c_image"
            app:layout_constraintVertical_bias="0.113"
            android:layout_marginBottom="@dimen/_5sdp"
            tools:ignore="MissingPrefix"
            tools:text="User Name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/occupation_future_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            android:visibility='@{vm.uiState.occupation.equals("")  ? View.GONE : View.VISIBLE}'
            android:text="@{vm.uiState.occupation}"
            android:lines="2"
            app:layout_constraintTop_toBottomOf="@+id/caller_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingPrefix"
            tools:visibility="gone"
            tools:text="Engineer, Dream - IAS Officer" />
        <TextView
            android:id="@+id/call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{vm.uiState.currentState}"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
            android:textColor="@color/white"
            android:visibility='@{!vm.uiState.currentState.equals("Timer") ? View.VISIBLE : View.INVISIBLE}'
            app:layout_constraintBottom_toTopOf="@id/incoming_timer_container"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@id/occupation_future_goals"
            app:layout_constraintVertical_bias="0.076"
            tools:ignore="MissingPrefix"
            tools:text="" />

        <Chronometer
            android:id="@+id/call_time1"
            startTimer="@{vm.uiState.startTime}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
            android:textColor="@color/white"
            android:visibility='@{vm.uiState.currentState.equals("Timer") ? View.VISIBLE : View.INVISIBLE}'
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@id/occupation_future_goals"
            tools:ignore="MissingPrefix" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gues_game_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="1"
            android:text="Guess The Word"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/call_time1"
            tools:ignore="MissingPrefix" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/play_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.65dp"
            android:layout_marginTop="84dp"
            android:layout_marginRight="7.65dp"
            android:background="@drawable/ic_gradient_rect"
            android:gravity="center"
            android:backgroundTint="@color/grey"
            android:text="PLAY GAME"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/call_time1"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/call_time1"
            app:layout_constraintTop_toBottomOf="@id/call_time1" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/play_game_btn">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/before_record_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_black_border_rectangle"
                android:drawableLeft="@drawable/ic_red_filled_circle"
                android:drawablePadding="@dimen/_2sdp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text="Recording"
                android:paddingHorizontal="@dimen/_6sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                tools:ignore="MissingPrefix" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/before_record_text_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/before_record_text"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:text=" of the game will get saved in your gallery"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                tools:ignore="MissingPrefix" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="call_time1,call_time"
            app:layout_constraintTop_toBottomOf="@id/occupation_future_goals" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/c_image"
            setProfileImage="@{vm.uiState.startTime &lt;= 0 ? null : vm.uiState.profileImage}"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_call_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.026" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/topic_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:gravity="center"
            android:text="Discussion Topic"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Bold"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline4" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottom_card_view"
            style="@style/CustomCardViewStyleNoBottomCorner"
            setBottomCardBackground="@{vm.uiState.recordingButtonState != RecordingButtonState.RECORDING  ? false : true}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:backgroundTint="@color/bottom_sheet_color">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_action"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/circle2"
                    android:backgroundTint="@color/checkbox_color"
                    android:onClick="@{vm::disconnectCall}"
                    android:padding="@dimen/_14sdp"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btn_mute"
                    app:layout_constraintTop_toTopOf="@+id/btn_mute"
                    app:srcCompat="@drawable/ic_baseline_call"
                    tools:ignore="SpeakableTextPresentCheck" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_speaker"
                    setSpeakerImage="@{vm.uiState.speakerOn}"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/circle2"
                    android:backgroundTint="@color/dis_color_10f"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{vm::switchSpeaker}"
                    android:padding="@dimen/_14sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_mute"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btn_record_call"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_speaker_on" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_record_call"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/circle2"
                    android:backgroundTint="@color/dis_color_10f"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{vm::recordCall}"
                    android:padding="@dimen/_14sdp"
                    android:visibility="@{(vm.uiState.isRecordingEnabled &amp;&amp; ((vm.uiState.recordButtonPressedTwoTimes &lt; 2))) || (vm.uiState.recordingButtonState == RecordingButtonState.RECORDING) ? View.VISIBLE : View.GONE }"
                    app:imageResource="@{vm.uiState.recordBtnImg}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_speaker"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/ic_rec_mic"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_record_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="@{vm.uiState.recordBtnTxt}"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                    android:textColor="@color/white"
                    android:visibility="@{(vm.uiState.isRecordingEnabled &amp;&amp; ((vm.uiState.recordButtonPressedTwoTimes &lt; 2))) || (vm.uiState.recordingButtonState == RecordingButtonState.RECORDING) ? View.VISIBLE : View.GONE }"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/btn_record_call"
                    app:layout_constraintStart_toStartOf="@+id/btn_record_call"
                    app:layout_constraintTop_toBottomOf="@+id/btn_record_call"
                    tools:ignore="MissingPrefix"
                    tools:text="Record"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="@string/speaker"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/btn_speaker"
                    app:layout_constraintStart_toStartOf="@+id/btn_speaker"
                    app:layout_constraintTop_toBottomOf="@+id/btn_speaker"
                    tools:ignore="MissingPrefix"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btn_mute"
                    setMicImage="@{vm.uiState.mute}"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/circle2"
                    android:backgroundTint="@color/dis_color_10f"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{vm::switchMic}"
                    android:padding="@dimen/_14sdp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_action"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btn_speaker"
                    app:layout_constraintTop_toTopOf="@+id/btn_speaker"
                    app:srcCompat="@drawable/ic_baseline_mic_off" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="@string/mute"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Regular"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="@+id/btn_mute"
                    app:layout_constraintStart_toStartOf="@+id/btn_mute"
                    app:layout_constraintTop_toBottomOf="@+id/btn_mute"
                    tools:ignore="MissingPrefix"
                    tools:visibility="visible" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_for_outgoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{vm.uiState.startTime > 0 ? View.VISIBLE : View.INVISIBLE }"
                    app:constraint_referenced_ids="btn_mute,btn_speaker,txt_speaker,txt_mute"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:id="@+id/incoming_timer_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{vm.source == ConstantsKt.FROM_INCOMING_CALL  ? View.VISIBLE : View.INVISIBLE }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone"
            app:layout_constraintVertical_bias="0.43">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/incoming_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="75"
                app:indicatorColor="#0D5CB8"
                app:indicatorSize="@dimen/_108sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.43"
                app:trackColor="#ffffff"
                app:trackThickness="10dp" />

            <TextView
                android:id="@+id/incoming_timer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="35"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Bold"
                android:textColor="#ffffff"
                android:textSize="42dp" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_userdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{vm.uiState.startTime &lt;= 0 &amp;&amp; vm.source == ConstantsKt.FROM_INCOMING_CALL ? View.INVISIBLE : View.VISIBLE }"
            app:constraint_referenced_ids="topic_header, c_image, occupation_future_goals"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recording_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_quiz"
            android:visibility="@{vm.uiState.recordingButtonState == RecordingButtonState.RECORDING  ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/photo_frames_layout"
                android:layout_width="0dp"
                android:layout_height="@dimen/_300sdp"
                android:baselineAligned="false"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/local_user_background"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        setBackgroundForLocalUser="@{vm.uiState.startTime &lt;= 0 ? null : vm.uiState.localUserProfile}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.4"
                        android:scaleType="fitXY"
                        android:src="@drawable/local_user_default_image" />

                    <FrameLayout
                        android:layout_width="@dimen/_86sdp"
                        android:layout_height="@dimen/_86sdp"
                        android:layout_alignStart="@id/local_user_image"
                        android:layout_alignTop="@id/local_user_image"
                        android:layout_alignEnd="@id/local_user_image"
                        android:layout_alignBottom="@+id/local_user_image"
                        android:background="@drawable/circle2"
                        android:backgroundTint="@color/green"
                        android:visibility="@{vm.uiState.callerSpeaking ? View.VISIBLE : View.GONE}" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/local_user_image"
                        setProfileImage="@{vm.uiState.startTime &lt;= 0 ? null : vm.uiState.localUserProfile}"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_call_placeholder"
                        tools:src="@drawable/local_user_default_image" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/local_user_name"
                        setColorLocalUser='@{vm.uiState.callerSpeaking}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/local_user_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:gravity="center"
                        android:text='@{vm.uiState.startTime &lt;= 0 ? "" :  vm.uiState.localUserName}'
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:text="Shobhit" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        setBackgroundForRemoteUser="@{vm.uiState.startTime &lt;= 0 ? null : vm.uiState.profileImage}"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.4"
                        android:scaleType="fitXY"
                        android:src="@drawable/remote_user_image" />

                    <FrameLayout
                        android:layout_width="@dimen/_86sdp"
                        android:layout_height="@dimen/_86sdp"
                        android:layout_alignStart="@id/remote_user_image"
                        android:layout_alignTop="@id/remote_user_image"
                        android:layout_alignEnd="@id/remote_user_image"
                        android:layout_alignBottom="@+id/remote_user_image"
                        android:background="@drawable/circle2"
                        android:backgroundTint="@color/p2p_circle_yellow"
                        android:visibility="@{vm.uiState.isCalleeSpeaking ? View.VISIBLE : View.GONE}" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/remote_user_image"
                        setProfileImage="@{vm.uiState.startTime &lt;= 0 ? null : vm.uiState.profileImage}"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_call_placeholder"
                        tools:src="@drawable/remote_user_image" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/remote_user_name"
                        setColorRemoteUser='@{vm.uiState.isCalleeSpeaking}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/remote_user_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:gravity="center"
                        android:text='@{vm.uiState.startTime &lt;= 0 ? "" :  vm.uiState.name}'
                        android:textAlignment="center"
                        android:textColor="@color/p2p_circle_yellow"
                        android:textStyle="bold"
                        android:visibility="visible"
                        tools:text="Harsh" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@id/photo_frames_layout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/record_call_game_card_view"
                    >

                    <TextView
                        android:id="@+id/guess_the_word_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="Guess The Word"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5_Bold"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_view_below_guess_the_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/guess_the_word_text_view"
                        android:layout_marginLeft="42dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="42dp"
                        android:gravity="center"
                        android:text="Describe your word without saying it and your partner will guess it"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Title_Message"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:id="@+id/guess_the_word_linear_layout_p2p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_view_below_guess_the_word"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_your_word"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Word"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_view_word_user_has_to_guess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SNAPCHAT"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                                android:textColor="@color/p2p_your_word_color_yellow"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="29dp"
                            android:backgroundTint="@color/white"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="22dp"
                            android:background="@android:color/darker_gray" />

                        <LinearLayout
                            android:id="@+id/linear_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_your_word_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your Word"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/text_view_word_user_has_to_guess_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="*********"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/guess_the_word_linear_layout_p2p"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="horizontal"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:layout_width="210dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/white"
                                android:textAllCaps="false"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/p2p_game_dark_purple"
                                android:text="Next Word"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/before_record_text_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/before_record_text"
                                android:gravity="center"
                                android:lineSpacingMultiplier="1.5"
                                android:text="Wait for your partner to click next"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="visible"
                                tools:ignore="MissingPrefix" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            app:strokeColor="@color/white"
                            android:backgroundTint="@color/p2p_game_dark_purple"
                            android:text="End Game"
                            android:textAllCaps="false"
                            app:cornerRadius="6dp"
                            app:strokeWidth="1.5dp"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/progress_bar_anim"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="@dimen/_10sdp"
                android:rotation="90"
                android:visibility="visible"
                loadGif="@{vm.uiState.startTime &lt;= 0 ? null : `https://s3.ap-south-1.amazonaws.com/www.static.skills.com/animation.gif`}"
                app:layout_constraintBottom_toBottomOf="@+id/photo_frames_layout"
                app:layout_constraintEnd_toEndOf="@+id/photo_frames_layout"
                app:layout_constraintStart_toStartOf="@+id/photo_frames_layout"
                app:layout_constraintTop_toTopOf="@+id/photo_frames_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>