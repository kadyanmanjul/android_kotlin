<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/digital_course_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digital Course Certificate"
        android:layout_marginTop="@dimen/_6sdp"
        android:textAppearance="@style/TextAppearance.JoshTypography.SubHeadingSemiBold24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/desc_about_certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get digital course certificate on successful completion of the exam."
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_2sdp"
        android:lines="2"
        android:textColor="@color/text_subdued"
        android:textAppearance="@style/TextAppearance.JoshTypography.CaptionRegular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/digital_course_certificate" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/certificate_img"
        android:layout_width="@dimen/_219sdp"
        android:layout_height="@dimen/_154sdp"
        android:scaleType="fitXY"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:elevation="@dimen/_2sdp"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/josh_skill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_about_certificate" />

</androidx.constraintlayout.widget.ConstraintLayout>