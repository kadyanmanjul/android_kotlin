<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.signup.SignUpVerificationFragment" />

        <variable
            name="viewModel"
            type="com.joshtalks.joshskills.ui.signup.SignUpViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/_16sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_16sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineSubStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/_24sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineSubEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_24sdp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/_16sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/otp_verify_label"
            android:textAppearance="@style/TextAppearance.JoshTypography.HeadingSemiBold"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineSubStart"
            app:layout_constraintTop_toTopOf="@+id/guidelineTop"
            app:layout_constraintWidth_default="percent" />


        <com.joshtalks.codeinputview.OtpTextView
            android:id="@+id/otp_view_2"
            style="@style/TextAppearance.JoshTypography.Body_Text_Medium_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:textColor="@color/black"
            app:bar_enabled="false"
            app:box_margin_left="@dimen/_10sdp"
            app:box_margin_right="@dimen/_10sdp"
            app:cursor_visible="@dimen/_1sdp"
            app:height="@dimen/_48sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_1"
            app:length="4"
            app:otp_box_background="@drawable/rect_with_bound"
            app:otp_box_background_active="@drawable/rect_with_bound"
            app:underline_width="0dp"
            app:width="@dimen/_48sdp" />

        <TextView
            android:id="@+id/waitingToDetect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_34sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:onClick="@{()->handler.editNumber()}"
            android:text="@{handler.waitingToDetectText()}"
            android:textAppearance="@style/TextAppearance.JoshTypography.CaptionMedium"
            android:textColor="@color/text_subdued"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp_view_2"
            tools:text="Waiting to automatically detect an SMS sent to +91 77329 71460. Wrong number?" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_wrong_otp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/wrong_otp"
            android:textAppearance="@style/TextAppearance.JoshTypography.CaptionMedium"
            android:textColor="@color/critical"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/waitingToDetect"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.8"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/resendCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32sdp"
            android:text="@string/resend_code"
            android:layout_marginStart="@dimen/_34sdp"
            android:enabled="false"
            android:onClick="@{()->handler.regeneratedOTP()}"
            android:textAppearance="@style/TextAppearance.JoshTypography.SubHeadingRegular2"
            android:textColor="@drawable/enable_disable_selector"
            app:layout_constraintEnd_toStartOf="@+id/tv_otp_timer"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_wrong_otp" />


        <TextView
            android:id="@+id/tv_otp_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.JoshTypography.SubHeadingRegular2"
            android:textColor="@color/disabled"
            app:layout_constraintBottom_toBottomOf="@+id/resendCodeTv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_34sdp"
            app:layout_constraintStart_toEndOf="@+id/resendCodeTv"
            app:layout_constraintTop_toTopOf="@+id/resendCodeTv"
            tools:text="01:00" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_verify"
            style="@style/Primary_Button_Filled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_24sdp"
            android:onClick="@{()->handler.verifyOTP()}"
            android:text="@string/next"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/text_view_privacy"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:gravity="center"
            android:onClick="@{()->handler.showPrivacyPolicyDialog()}"
            android:text="@string/privacy_label"
            android:textAppearance="@style/TextAppearance.JoshTypography.TinyRegular"
            android:textColor="@color/text_subdued"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
