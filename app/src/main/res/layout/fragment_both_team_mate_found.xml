<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickHandler"
            type="com.joshtalks.joshskills.quizgame.ui.main.view.fragment.BothTeamMateFound" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quizgame.ui.main.view.fragment.BothTeamMateFound">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/ic_game_back"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtquiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/quiz_game"
                android:layout_marginTop="30dp"
                android:textColor="@color/game_name_color"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H2"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card1"
            app:layout_constraintBottom_toTopOf="@+id/rel1"
            app:layout_constraintTop_toTopOf="@+id/txtquiz">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                app:cardCornerRadius="10dp"
                app:cardElevation="45dp"
                app:cardMaxElevation="20dp"
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="#8785FB"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Team Found"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image1"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/josh_skill"
                        app:civ_border_color="@color/light_blue_quiz"
                        app:civ_border_width="@dimen/_4sdp" />


                    <TextView
                        android:id="@+id/user_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/user_name"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image2"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/josh_skill"
                        app:civ_border_color="@color/light_blue_quiz"
                        app:civ_border_width="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/user_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/user_name"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                        android:textColor="@color/white" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/globe"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/vs"
                        android:src="@drawable/waveltor" />


                    <RelativeLayout
                        android:id="@+id/vs1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_ellipse_79" />

                    <RelativeLayout
                        android:id="@+id/vs"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/back_vs">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/image9"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="lottie/globeanim.json"
                            app:lottie_loop="true"
                            app:lottie_speed="1" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/vs"
                        android:src="@drawable/wavertol" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/globe"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image4"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/josh_skill"
                        app:civ_border_color="@color/light_blue_quiz"
                        app:civ_border_width="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/user_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image4"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/user_name"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/globe"
                    android:layout_marginLeft="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image3"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/josh_skill"
                        app:civ_border_color="@color/light_blue_quiz"
                        app:civ_border_width="@dimen/_4sdp" />

                    <TextView
                        android:id="@+id/user_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_image3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/user_name"
                        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="#000">

                        <Chronometer
                            android:id="@+id/call_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Regular"
                            android:textColor="@color/white"
                            android:visibility="invisible" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>