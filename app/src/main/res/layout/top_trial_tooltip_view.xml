<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/balloon_arrow"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/arrow"
        android:tint="@color/yellow" />

    <RelativeLayout
        android:id="@+id/balloon_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle_attach"
            android:backgroundTint="@color/yellow"
            android:paddingVertical="@dimen/_6sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/balloon_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:paddingHorizontal="@dimen/_16sdp"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/black"
                tools:text="Agar aap in course ke alawa kuch aur bhi seekhna chahte hai to aaj aur aap free mei unlimited courses unlock kar sakte hai." />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
