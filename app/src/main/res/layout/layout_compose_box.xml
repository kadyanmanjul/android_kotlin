<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    tools:background="@color/black">

    <RelativeLayout
        android:id="@+id/rlActionContainers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivAudio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_inbox_audio" />

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ivAudio"
            android:src="@drawable/ic_inbox_camera" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ivCamera"
            android:src="@drawable/ct_image" />

        <ImageView
            android:id="@+id/ivFile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ivImage"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/ic_add"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/flBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_toStartOf="@+id/boxEndLayout"
        android:layout_toEndOf="@id/ivArrow"
        android:background="@drawable/compose_box"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingVertical="@dimen/_2sdp"
        tools:visibility="gone">

        <com.joshtalks.joshskills.ui.groupchat.uikit.ComposeBox.CometChatEditText
            android:id="@+id/etComposeBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/message"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingVertical="8dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/voiceMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/boxEndLayout"
        android:layout_toStartOf="@+id/boxEndLayout"
        android:background="@drawable/compose_box"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/record_time"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/recv_ic_delete"
            android:visibility="gone"
            tools:visibility="visible" />

        <SeekBar
            android:id="@+id/voice_message_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/record_time"
            android:visibility="visible" />

        <com.joshtalks.joshskills.ui.groupchat.uikit.AudioRecordView
            android:id="@+id/record_audio_visualizer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/ivDelete"
            android:visibility="gone"
            app:chunkAlignTo="bottom"
            app:chunkColor="@color/colorPrimary"
            app:chunkMaxHeight="150dp"
            app:chunkMinHeight="1dp"
            app:chunkSpace="1dp"
            app:chunkWidth="2dp"
            tools:visibility="gone" />

        <Chronometer
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ivDelete"
            android:elevation="8dp"
            android:textSize="@dimen/_14ssp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/boxEndLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMic"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/recv_bg_mic"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_mic_white_24dp" />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/recv_bg_mic"
            android:backgroundTint="@color/colorPrimary"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_send"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
