<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    tools:background="@color/black">

    <RelativeLayout
        android:id="@+id/rlActionContainers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivAudio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_inbox_audio" />

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ivAudio"
            android:src="@drawable/ic_inbox_camera" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ivCamera"
            android:src="@drawable/ct_image" />

        <ImageView
            android:id="@+id/ivFile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/ivImage"
            android:src="@drawable/ic_insert_drive_file_black_24dp"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/ic_add"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/flBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:layout_toStartOf="@+id/record_button"
        android:layout_toEndOf="@id/ivArrow"
        android:background="@drawable/rect_round"
        android:paddingHorizontal="@dimen/_14sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:visibility="visible"
        tools:visibility="visible">

        <com.joshtalks.joshskills.ui.groupchat.uikit.ComposeBox.CometChatEditText
            android:id="@+id/etComposeBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:hint="@string/message"
            android:imeOptions="actionSend"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/button_color"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

    <com.joshtalks.recordview.RecordView
        android:id="@+id/record_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_toStartOf="@+id/record_button"
        android:background="@drawable/rect_round"
        android:visibility="gone"
        app:counter_time_color="#ff0000"
        app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
        app:slide_to_cancel_arrow_color="#000000"
        app:slide_to_cancel_bounds="10dp"
        app:slide_to_cancel_margin_right="10dp"
        app:slide_to_cancel_text="@string/slide_to_cancel"
        tools:visibility="gone" />

    <com.joshtalks.recordview.CustomImageButton
        android:id="@+id/record_button"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/recv_bg_mic"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:padding="@dimen/_8sdp"
        android:scaleType="centerInside"
        android:textColor="#fff"
        android:visibility="visible"
        app:image_first="@drawable/recv_ic_mic_white"
        app:image_second="@drawable/ic_send" />

    <Chronometer
        android:id="@+id/record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
