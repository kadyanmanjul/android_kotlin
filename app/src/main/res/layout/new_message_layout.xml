<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="#BCEEECEC"
        android:gravity="center"
        android:orientation="vertical">

    <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
            android:id="@+id/text_title"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rect_round"
            android:gravity="center"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textAllCaps="true"
            android:textColor="@color/black"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#0D000000" />
</LinearLayout>