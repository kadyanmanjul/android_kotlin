<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout xmlns:wheel="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <FrameLayout
                android:id="@+id/medid_fl"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true">

            <FrameLayout
                    android:id="@+id/download_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_start_download"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_pdf_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:src="@drawable/ic_download"
                        android:tint="#7A7A7A"
                        android:visibility="visible" />

                <com.pnikosis.materialishprogress.ProgressWheel
                        android:id="@+id/progress_dialog"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        wheel:matProg_barColor="@color/button_primary_color"
                        wheel:matProg_fillRadius="false"
                        wheel:matProg_progressIndeterminate="true"
                        wheel:matProg_rimColor="#22000000"
                        wheel:matProg_rimWidth="@dimen/_3sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_cancel_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_cross"
                        android:tint="#7A7A7A"
                        android:visibility="gone" />


            </FrameLayout>

            <com.joshtalks.joshskills.core.custom_ui.AnimatingToggle
                    android:id="@+id/control_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                <ImageView
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_play_24dp"
                        android:visibility="visible" />


                <ImageView
                        android:id="@+id/pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_pause_24dp"
                        android:visibility="visible" />


                <ImageView
                        android:id="@+id/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:visibility="gone" />
            </com.joshtalks.joshskills.core.custom_ui.AnimatingToggle>

        </FrameLayout>

        <SeekBar
                android:id="@+id/seek"

                android:layout_width="fill_parent"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/medid_fl"
                android:tint="@color/button_primary_color" />

        <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seek"
                android:layout_alignStart="@id/seek"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                tools:text="00:00"
                tools:visibility="visible" />
    </RelativeLayout>
</merge>