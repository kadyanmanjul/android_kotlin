<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickHandler"
            type="com.joshtalks.joshskills.quizgame.ui.main.view.fragment.WinScreenFragment" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quizgame.ui.main.view.fragment.WinScreenFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/ic_game_back"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/notification_play_again"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="83dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="15dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#fff"
                        android:layout_marginRight="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/notification_gradient">

                            <RelativeLayout
                                android:id="@+id/notificaton_rel111"
                                android:layout_width="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:id="@+id/layout"
                                    android:layout_width="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/border">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/user_image_for_not_paly"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/josh_skill_bg" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/user_name_for_not_play"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_toRightOf="@+id/layout"
                                    android:gravity="center_vertical"
                                    android:text="@string/user_name"
                                    android:textColor="@color/test_color"
                                    android:textSize="@dimen/_10ssp"
                                    android:textStyle="bold" />
                                <View
                                    android:id="@+id/divider1"
                                    android:layout_width="142dp"
                                    android:layout_height="2dp"
                                    android:background="#86AA99"
                                    android:layout_toRightOf="@+id/layout"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_below="@+id/user_name_for_not_play" />

                                <TextView
                                    android:id="@+id/txt_msg_not_play"
                                    android:layout_width="278dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/divider1"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_toRightOf="@+id/layout"
                                    android:gravity="center_vertical"
                                    android:text="Let's Play again"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/cancel_notification"
                    android:layout_width="23dp"
                    android:layout_height="27dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#fff"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_cross_quiz">
                </ImageView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/notification_card"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="15dp"
                    app:strokeColor="#fff"
                    app:strokeWidth="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/notification_gradient">

                        <RelativeLayout
                            android:id="@+id/notificaton_rel"
                            android:layout_width="50dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_height="50dp"
                            android:background="@drawable/border">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/josh_skill_bg" />


                            <com.joshtalks.joshskills.quizgame.utils.CircularProgressView
                                android:id="@+id/progress"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/notificaton_rel"
                            android:gravity="center_vertical"
                            android:text="@string/user_name"
                            android:textColor="#FDFC01"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <View
                            android:id="@+id/divider2"
                            android:layout_width="142dp"
                            android:layout_height="2dp"
                            android:layout_below="@+id/user_name"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="2dp"
                            android:layout_toRightOf="@+id/notificaton_rel"
                            android:background="#86AA99" />

                        <TextView
                            android:id="@+id/txt_msg2"
                            android:layout_width="278dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divider2"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@+id/notificaton_rel"
                            android:gravity="center_vertical"
                            android:text="Add Harsh to favourite partner ?"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:id="@+id/button_linear_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/buton_decline"
                                android:layout_width="70dp"
                                android:layout_height="22dp"
                                android:layout_marginRight="15dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="5dp"
                                app:strokeColor="#920203"
                                app:strokeWidth="3dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/red_gradient">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="No"
                                        android:textColor="#fff"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/button_accept"
                                android:layout_width="70dp"
                                android:layout_height="22dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="15dp"
                                app:cardCornerRadius="6dp"
                                app:cardElevation="5dp"
                                app:strokeColor="#3AAC21"
                                app:strokeWidth="3dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/accept_button_gradient">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="Yes"
                                        android:textColor="#fff"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>


                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

           <TextView
                android:id="@+id/txtquiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/quiz_game"
                android:textColor="@color/game_name_color"
                android:textSize="@dimen/_35sdp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
               android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:visibility="invisible"
                android:id="@+id/conglutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtquiz"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_congratulations"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtquiz" />


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2_user_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/josh_skill_bg"
                    app:civ_border_color="@color/blue"
                    app:civ_border_width="@dimen/_2sdp"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2_user_image1_shadow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_offline_shadow_img"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/team2_user1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team2_user_image1"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">

                <ImageView
                    android:id="@+id/win_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/image_win_sign"
                    android:visibility="invisible"
                    android:scaleType="fitXY"
                    />

                <com.joshtalks.joshskills.quizgame.utils.TextViewOutline
                    android:id="@+id/txt_winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/win_img"
                    android:shadowColor="#B5C8B005"
                    android:shadowDx="0"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:text="Winner!"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H2_Bold"
                    android:textColor="#C8B005"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2_user_image2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/josh_skill_bg"
                    app:civ_border_width="@dimen/_2sdp"
                    app:civ_border_color="@color/blue"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2_user_image2_shadow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_offline_shadow_img"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/team2_user2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team2_user_image2"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/table_card_border"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">


                <TextView
                    android:id="@+id/team2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Team 2"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/team2"
                    android:layout_marginTop="2dp"
                    android:background="#529CB7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:background="#02797F"
                                android:gravity="center_horizontal"
                                android:text="Match\n Score"
                                android:textAlignment="center"
                                android:textSize="@dimen/_8sdp"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/opponent_team_marks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="20"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1.2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:background="#02797F"
                                    android:text="Winning \Bonus"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8" />

                                <TextView
                                    android:id="@+id/winning_point_opponent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="5"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Total"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/opponent_user_total_marks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="25"
                                    android:textColor="#fff"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/vs"
                    android:src="@drawable/gvygybgygby" />

                <RelativeLayout
                    android:id="@+id/vs"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/back_vs">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/ic_vs_text" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/vs"
                    android:src="@drawable/right_toleft_wave" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">


                <RelativeLayout
                    android:id="@+id/rel_img"
                    android:layout_width="@dimen/_62sdp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/team1_user_image2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/josh_skill_bg"
                        app:civ_border_color="@color/blue"
                        app:civ_border_width="@dimen/_2sdp"
                        />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:visibility="invisible"
                        android:id="@+id/team1_user_image2_shadow"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_offline_shadow_img" />


                    <androidx.cardview.widget.CardView
                        android:visibility="invisible"
                        android:id="@+id/btn_add_people"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true">
                        <RelativeLayout
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="#49B819">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_add_people">
                            </ImageView>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                </RelativeLayout>


                <TextView
                    android:id="@+id/team1_user2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rel_img"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout9"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:background="@drawable/table_card_border"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">


                <TextView
                    android:id="@+id/team5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Team 1"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/team5"
                    android:layout_marginTop="2dp"
                    android:background="#529CB7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider3"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:background="#02797F"
                                android:gravity="center_horizontal"
                                android:text="Match\n Score"
                                android:textAlignment="center"
                                android:textSize="@dimen/_8sdp"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/current_user_marks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="12"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:textStyle="bold"

                                >

                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1.2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#02797F"
                                    android:gravity="center_horizontal"
                                    android:text="Winning \Bonus"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_8sdp"
                                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
                                    android:textColor="@color/white"
                                    />

                                <TextView
                                    android:id="@+id/winning_point_current"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Total"
                                    android:textAlignment="center"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/current_user_total_marks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="12"
                                    android:textColor="#fff"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <ImageView
                android:id="@+id/win_img11"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/image_win_sign"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@+id/txt_opponent_win"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout7" />
            <com.joshtalks.joshskills.quizgame.utils.TextViewOutline
                android:visibility="invisible"
                android:id="@+id/txt_opponent_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opponent Won!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout7"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout9"
                android:shadowColor="#0A5E81"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="1"
                >

            </com.joshtalks.joshskills.quizgame.utils.TextViewOutline>


            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team1_user_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/josh_skill_bg"
                    app:civ_border_width="@dimen/_2sdp"
                    app:civ_border_color="@color/blue"
                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team1_user_image1_shadow"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_offline_shadow_img"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/team1_user1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team1_user_image1"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_make_new_team"
                android:layout_width="130dp"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"
                app:strokeWidth="3dp"
                app:strokeColor="#710322"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:focusable="true"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout7">
                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/make_new_te"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_play_again"
                android:layout_width="130dp"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="30dp"
                app:strokeWidth="3dp"
                app:strokeColor="#710322"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:focusable="true"
                android:clickable="true"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">
                <RelativeLayout
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_gradient">

                    <TextView
                        android:id="@+id/txt_on_button_playagain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="@string/play_again_"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>