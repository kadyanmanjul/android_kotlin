<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickHandler"
            type="com.joshtalks.joshskills.quizgame.ui.main.view.fragment.WinScreenFragment" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quizgame.ui.main.view.fragment.WinScreenFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/ic_game_back"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtquiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/quiz_game"
                android:textColor="@color/game_name_color"
                android:textSize="@dimen/_35sdp"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:visibility="invisible"
                android:id="@+id/conglutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtquiz"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_congratulations"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtquiz" />


            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">

                <ImageView
                    android:id="@+id/team2_user_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_demo" />

                <TextView
                    android:id="@+id/team2_user1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team2_user_image1"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">

                <ImageView
                    android:id="@+id/win_img"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/image_win_sign"
                    android:visibility="invisible"
                    android:scaleType="fitXY"
                    />

                <com.joshtalks.joshskills.quizgame.utils.TextViewOutline
                    android:id="@+id/txt_winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/win_img"
                    android:shadowColor="#B5C8B005"
                    android:shadowDx="0"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:text="Winner!"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H2_Bold"
                    android:textColor="#C8B005"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">

                <ImageView
                    android:id="@+id/team2_user_image2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_demo" />

                <TextView
                    android:id="@+id/team2_user2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team2_user_image2"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/table_card_border"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout"
                app:layout_constraintTop_toBottomOf="@+id/conglutions">


                <TextView
                    android:id="@+id/team2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Team 2"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/team2"
                    android:layout_marginTop="2dp"
                    android:background="#529CB7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:background="#02797F"
                                android:gravity="center_horizontal"
                                android:text="Match\n Score"
                                android:textAlignment="center"
                                android:textSize="@dimen/_8sdp"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/opponent_team_marks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="20"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:textStyle="bold">
                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1.2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:background="#02797F"
                                    android:text="Winning \Bonus"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_8sdp"
                                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8" />

                                <TextView
                                    android:id="@+id/winning_point_opponent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="5"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Total"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/opponent_user_total_marks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="25"
                                    android:textColor="#fff"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/vs"
                    android:src="@drawable/waveltor" />

                <RelativeLayout
                    android:id="@+id/vs"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/back_vs">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/ic_vs_text" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/vs"
                    android:src="@drawable/wavertol" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

                <ImageView
                    android:id="@+id/team1_user_image2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_demo" />

                <TextView
                    android:id="@+id/team1_user2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team1_user_image2"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout9"
                android:layout_width="150dp"
                android:layout_height="72dp"
                android:background="@drawable/table_card_border"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">


                <TextView
                    android:id="@+id/team5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Team 1"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/team5"
                    android:layout_marginTop="2dp"
                    android:background="#529CB7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider3"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:background="#02797F"
                                android:gravity="center_horizontal"
                                android:text="Match\n Score"
                                android:textAlignment="center"
                                android:textSize="@dimen/_8sdp"
                                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:id="@+id/current_user_marks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:text="12"
                                android:textColor="#fff"
                                android:textSize="14sp"
                                android:textStyle="bold"

                                >

                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="49dp"
                            android:layout_weight="1.2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="#02797F"
                                    android:gravity="center_horizontal"
                                    android:text="Winning \Bonus"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_8sdp"
                                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
                                    android:textColor="@color/white"
                                    />

                                <TextView
                                    android:id="@+id/winning_point_current"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#529CB7" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="47dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="2dp"
                            android:layout_weight="0.8"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="47dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="Total"
                                    android:textAlignment="center"
                                    android:textSize="13sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/current_user_total_marks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:text="12"
                                    android:textColor="#fff"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <ImageView
                android:id="@+id/win_img11"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/image_win_sign"
                android:visibility="invisible"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@+id/txt_opponent_win"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout7" />
            <com.joshtalks.joshskills.quizgame.utils.TextViewOutline
                android:visibility="invisible"
                android:id="@+id/txt_opponent_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opponent Won!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                android:layout_marginTop="28dp"
                app:layout_constraintEnd_toStartOf="@+id/relativeLayout4"
                app:layout_constraintStart_toEndOf="@+id/relativeLayout7"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout9"
                android:shadowColor="#0A5E81"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="1"
                >

            </com.joshtalks.joshskills.quizgame.utils.TextViewOutline>


            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout5">

                <ImageView
                    android:id="@+id/team1_user_image1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_demo" />

                <TextView
                    android:id="@+id/team1_user1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/team1_user_image1"
                    android:layout_centerHorizontal="true"
                    android:text="Harsh"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H6_Semi_Bold"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_make_new_team"
                android:layout_width="130dp"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="30dp"
                app:strokeWidth="3dp"
                app:strokeColor="#710322"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout7">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/make_new_te"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold">

                    </TextView>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_play_again"
                android:layout_width="130dp"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="30dp"
                app:strokeWidth="3dp"
                app:strokeColor="#710322"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/red_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play_again_"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true">

                    </TextView>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>