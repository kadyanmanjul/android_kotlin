<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="android.view.View" />

        <import type="com.joshtalks.joshskills.R" />

        <variable
            name="vm"
            type="com.joshtalks.joshskills.ui.inbox.InboxViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_background"
        tools:context="com.joshtalks.joshskills.ui.inbox.InboxActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <include
                layout="@layout/inbox_toolbar"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/inbox_nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_16sdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_16sdp" />


            <com.joshtalks.joshskills.util.TrialTimerView
                android:id="@+id/trialTimerView"
                android:layout_width="0dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                android:layout_marginTop="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/trialTimerDivider"
                style="@style/line"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trialTimerView" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_inbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trialTimerDivider"
                tools:itemCount="3"
                tools:listitem="@layout/inbox_item_layout" />

                <TextView
                    android:id="@+id/text_recommended"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:padding="@dimen/_4sdp"
                    android:visibility="@{vm.isRecommendedVisible ? View.VISIBLE : View.GONE}"
                    android:text="More recommended courses"
                    android:textAppearance="@style/TextAppearance.JoshTypography.SubHeadingSemiBold24"
                    android:textColor="@color/text_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_inbox">

                </TextView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/is_best_course"
                    android:layout_width="85dp"
                    android:layout_height="23dp"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_minus5sdp"
                    android:elevation="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:visibility="@{vm.isRecommendedVisible ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layout_constraintTop_toBottomOf="@id/text_recommended"
                    app:layout_constraintBottom_toTopOf="@+id/recycler_view_recommended_course"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_best_value"
                    tools:visibility="visible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_recommended_course"
                    onCourseItemClick="@{vm.onItemClick}"
                    recommendedCourseListAdapter="@{vm.recommendedAdapter}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_8sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_recommended"
                    app:rippleColor="@color/pure_white"
                    tools:itemCount="3"
                    tools:listitem="@layout/inbox_item_layout_for_recommended_course" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_explore_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{vm.isRecommendedVisible ? View.VISIBLE : View.GONE}"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:background="@color/pure_white"
                    android:text="Explore more courses >>"
                    android:textAppearance="@style/TextAppearance.JoshTypography.BodySemiBold20"
                    android:textColor="@color/primary_500"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recycler_view_recommended_course">

                </com.google.android.material.textview.MaterialTextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_explore_course">

                    <include layout="@layout/find_more_layout" />

                    <include
                        layout="@layout/payment_status_layout"
                        tools:visibility="gone" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
