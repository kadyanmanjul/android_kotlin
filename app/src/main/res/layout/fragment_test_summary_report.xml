<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.assessment.TestSummaryFragment" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="start|center"
                    android:minHeight="?attr/actionBarSize"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:theme="@style/Theme.GuidelinesCompat.Light.DarkToolbar">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center_vertical|end"
                        android:paddingHorizontal="@dimen/_4sdp"
                        android:paddingVertical="@dimen/_4sdp"
                        android:visibility="visible"
                        app:srcCompat="@drawable/ic_arrow_back"
                        app:tint="@color/black" />

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        ffontPath="fonts/Poppins-Regular.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:gravity="center_vertical|start"
                        android:singleLine="true"
                        android:text="@string/test_summary_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_18" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <com.mindorks.placeholderview.PlaceHolderView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/materialButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintVertical_bias="0"
                tools:itemCount="3"
                tools:listitem="@layout/test_summary_item_layout" />

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialButton"
                fontPath="fonts/Poppins-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/round_rectangle_for_course_expo"
                android:backgroundTint="@color/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="@{()->handler.dismiss()}"
                android:padding="@dimen/_10sdp"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"
                app:cornerRadius="@dimen/_28sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rippleColor="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
