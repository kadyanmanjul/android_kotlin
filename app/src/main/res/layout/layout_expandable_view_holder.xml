<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/course_padding_dimen"
        android:background="@drawable/top_divider_with_padding_bg"
        android:orientation="vertical">

    <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
            android:id="@+id/txt_title"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            tools:text="Questions &amp; Answers" />

    <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            tools:itemCount="2"
            tools:listitem="@layout/faq_category_item_layout" />

    <com.mindorks.placeholderview.ExpandablePlaceHolderView
            android:layout_marginTop="@dimen/_6sdp"
            android:id="@+id/expandableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            tools:listitem="@layout/faq_item" />
</LinearLayout>
