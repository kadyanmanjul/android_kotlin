<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.joshskills.ui.lesson.grammar_new.GrammarNewFragment" />
    </data>

    <ScrollView
        android:id="@+id/grammar_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_8sdp"
            tools:visibility="visible">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:progress="0"
                android:progressDrawable="@drawable/grammar_rating_progress_bar_drawable" />

            <ViewStub
                android:id="@+id/heading_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/grammar_heading_view_stub" />

            <ViewStub
                android:id="@+id/choice_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/grammar_choice_view_stub" />

            <ViewStub
                android:id="@+id/button_action_views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout="@layout/grammar_button_view_stub" />

        </LinearLayout>

    </ScrollView>
</layout>
