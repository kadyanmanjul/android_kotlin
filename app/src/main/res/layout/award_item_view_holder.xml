<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_28sdp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/josh_skill" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="@dimen/_76sdp"
        android:layout_height="@dimen/_24ssp"
        android:gravity="center|top"
        android:padding="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8"
        android:textSize="@dimen/_8ssp"
        android:minLines="2"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Student of the year" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="@dimen/_76sdp"
        android:layout_height="@dimen/_12ssp"
        android:gravity="center|top"
        android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8_Semi_Bold"
        android:textSize="@dimen/_8ssp"
        android:textColor="@color/grey_68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Earned on 24th Aug" />
</androidx.constraintlayout.widget.ConstraintLayout>
