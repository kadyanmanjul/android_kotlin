<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter_grey"
        tools:context=".ui.group.NewGroupFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_group"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:elevation="1dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_button_round_enabled"
            android:gravity="center_vertical|start"
            android:src="@drawable/ic_josh_course"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_group_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@color/transparent"
            android:singleLine="true"
            android:hint="Enter Group Name"
            app:layout_constraintBottom_toBottomOf="@+id/img_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_group"
            app:layout_constraintTop_toTopOf="@+id/img_group" />

        <View
            android:id="@+id/et_background_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="@+id/et_group_name"
            app:layout_constraintStart_toStartOf="@+id/et_group_name"
            app:layout_constraintTop_toBottomOf="@+id/et_group_name" />

        <TextView
            android:id="@+id/tv_group_name_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:elevation="1dp"
            android:paddingBottom="@dimen/_8sdp"
            android:text="Provide a group name and optional group icon "
            app:layout_constraintEnd_toStartOf="@+id/fab_add_group"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_group" />

        <View
            android:id="@+id/background_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_group_name_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_group"
            android:layout_width="@dimen/_48sdp"
            android:layout_height="@dimen/_48sdp"
            android:backgroundTint="@color/blue33"
            android:src="@drawable/ic_search"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/background_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_group_name_hint" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>