<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:stateListAnimator="@animator/toolbar_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close_message_action"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_arrow_back"
            tools:visibility="visible" />

        <com.joshtalks.joshskills.ui.groupchat.uikit.Avatar
            android:id="@+id/iv_chat_avatar"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/iv_close_message_action"
            android:background="@drawable/white_button_round_enabled"
            android:gravity="center_vertical|start"
            android:src="@drawable/ic_josh_course"
            android:visibility="visible"
            tools:src="@tools:sample/avatars"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_toStartOf="@id/iv_copy_message_action"
            android:layout_toEndOf="@id/iv_chat_avatar">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start|center"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Normal_Bold"
                android:textColor="@color/white"
                tools:text="Spoken English Course" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.JoshTypography.Caption_Normal_Regular"
                android:textColor="@color/white"
                tools:text="Harsh is typing..." />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_copy_message_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_setting"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="@dimen/_6sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="8dp"
            android:paddingBottom="@dimen/_14sdp"
            android:src="@drawable/ic_content_copy"
            android:visibility="gone"
            app:tint="@color/white"
            tools:visibility="visible" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_4sdp"
            android:tint="@color/white"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_more_option"
            tools:visibility="visible" />


    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>
