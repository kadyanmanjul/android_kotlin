<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_210sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Unlimited calling @1499 "
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In the Free Version, You will get 14 calls  per week. (including incoming and outgoing calls)"
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/speaking_practise_gray"
            android:layout_marginRight="@dimen/_17sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unused calls will not be carried foward to the next week."
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:textColor="@color/speaking_practise_gray"
            android:textSize="@dimen/_13ssp"
            android:layout_marginRight="@dimen/_17sdp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Now"
            app:cornerRadius="@dimen/_15sdp"
            android:backgroundTint="@color/colorAccent"
            android:paddingHorizontal="@dimen/_16sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_18sdp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>