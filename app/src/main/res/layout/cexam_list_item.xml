<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_round_16"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Medium_Bold"
                android:textColor="@color/black"
                android:visibility="visible"
                tools:text="What is the correct translation of “Hum sab apni english sudharna chahte hai”?" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_question"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:backgroundTint="@color/button_color"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/next_question"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.JoshTypography.ButtonSemiBold"
                android:textColor="@color/white"
                android:visibility="gone"
                app:cornerRadius="@dimen/_4sdp"
                app:rippleColor="@color/white"
                tools:visibility="visible" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="start"
                android:text="@string/explanation"
                android:textAppearance="@style/TextAppearance.JoshTypography.SubHeadingBold_2"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_next_question"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.JoshTypography.BodyRegular"
                android:textColor="@color/black"
                android:visibility="gone"
                tools:text="wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d  wd  wd  wd  wd w dw d w d wd w d  dwdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d wdw d wd wd w d wd w d w d wd  wd  wd  wd  wd w dw d w d wd w d "
                tools:visibility="visible" />

        </LinearLayout>
    </FrameLayout>
</layout>
