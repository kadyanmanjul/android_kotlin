<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.profile.MediaPickerFragment" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="@string/profile_photo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:drawableTop="@drawable/ic_gallary"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center"
                android:onClick="@{()->handler.onSelectGallery()}"
                android:padding="@dimen/_10sdp"
                android:text="@string/gallery"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_header" />

        <TextView
                android:id="@+id/tv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:drawableTop="@drawable/ic_camera_2"
                android:drawablePadding="@dimen/_10sdp"
                android:gravity="center"
                android:onClick="@{()->handler.onSelectCamera()}"
                android:padding="@dimen/_10sdp"
                android:text="@string/camera"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_gallery"
                app:layout_constraintLeft_toRightOf="@id/tv_gallery" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>