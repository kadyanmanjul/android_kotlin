<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_16sdp"
        android:paddingBottom="@dimen/_16sdp">

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_tv"
            android:textAppearance="@style/TextAppearance.JoshTypography.XLargeSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_16sdp"
            android:textColor="@color/black"
            tools:text="@string/add_reminder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/am_pm_tv"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Semi_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"
            tools:text="am/pm"
            app:layout_constraintBaseline_toBaselineOf="@+id/time_tv"
            app:layout_constraintBottom_toBottomOf="@+id/time_tv"
            app:layout_constraintStart_toEndOf="@id/time_tv" />

    <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/alarm_status_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

    <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/alarm_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:paddingEnd="@dimen/_16sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />
</androidx.constraintlayout.widget.ConstraintLayout>