<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        tools:context=".ui.payment.PaymentActivity">

    <TextView
            android:id="@+id/title"
            style="@style/TextStyle.TopBarScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="Why Josh Skills ?"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9" />

    <TextView
            android:id="@+id/description"
            style="@style/TextStyle.TopBarScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Josh Talks - India ke youth ki awaaz! With over 7 Million Youtube Subs &amp; multiple awards,  Josh is here to help you speed your career"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/font_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9" />

    <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/my_josh_recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_6sdp"
            android:nestedScrollingEnabled="true"
            android:padding="@dimen/_4sdp"
            android:scrollbars="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.9" />

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_24sdp"
            android:src="@drawable/payment_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_josh_recycler_view"
            app:layout_constraintWidth_default="percent"

            app:layout_constraintWidth_percent="0.9"
            tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>