<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:wheel="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="handler"
                type="com.joshtalks.joshskills.ui.payment.CourseDetailType1Fragment" />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_82sdp"
                android:layout_height="@dimen/_82sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                wheel:matProg_barColor="@color/button_primary_color"
                wheel:matProg_fillRadius="true"
                wheel:matProg_linearProgress="false"
                wheel:matProg_progressIndeterminate="true"
                wheel:matProg_rimColor="#33128C7E"
                wheel:matProg_rimWidth="@dimen/_2sdp" />


        <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/below_buy_cv"
                android:background="#f4f4f4"
                android:visibility="gone"
                card_view:visibility="visible">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <FrameLayout
                            android:id="@+id/upper_container"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/course_page_bg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHeight_default="percent"
                            app:layout_constraintHeight_percent="0.73"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/bg_top_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp">


                            <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_back"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:gravity="center_vertical|start"
                                    android:onClick="@{()->handler.backPress()}"
                                    android:visibility="visible"
                                    app:srcCompat="@drawable/ic_arrow_back" />


                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/course_title"
                                    fontPath="fonts/OpenSans-Bold.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/iv_back"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:ellipsize="end"
                                    android:gravity="start|center"
                                    android:lineSpacingExtra="@dimen/_2sdp"
                                    android:maxLines="4"
                                    android:paddingEnd="@dimen/_20sdp"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_22" />

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/course_desc"
                                    fontPath="fonts/OpenSans-Regular.ttf"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/course_title"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:ellipsize="end"
                                    android:gravity="start|center"
                                    android:maxLines="4"
                                    android:paddingEnd="@dimen/_22sdp"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/font_14" />


                            <LinearLayout
                                    android:id="@+id/linear1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/course_desc"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/_12sdp">

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tv_rating"
                                        fontPath="fonts/OpenSans-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/course_text_round"
                                        android:drawableStart="@drawable/ic_rating_small"
                                        android:drawablePadding="@dimen/_4sdp"
                                        android:gravity="center_vertical"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingTop="@dimen/_4sdp"
                                        android:paddingEnd="@dimen/_8sdp"
                                        android:paddingBottom="@dimen/_4sdp"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/font_9" />


                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tv_enroll_users"

                                        fontPath="fonts/OpenSans-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:background="@drawable/course_text_round"
                                        android:drawableStart="@drawable/ic_person_small"
                                        android:drawablePadding="@dimen/_4sdp"
                                        android:gravity="center_vertical"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingTop="@dimen/_4sdp"
                                        android:paddingEnd="@dimen/_8sdp"
                                        android:paddingBottom="@dimen/_4sdp"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/font_9" />

                                <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tv_duration"
                                        fontPath="fonts/OpenSans-Regular.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_8sdp"
                                        android:background="@drawable/course_text_round"
                                        android:drawableStart="@drawable/ic_timer_small"
                                        android:drawablePadding="@dimen/_4sdp"
                                        android:gravity="center_vertical"
                                        android:paddingStart="@dimen/_8sdp"
                                        android:paddingTop="@dimen/_4sdp"
                                        android:paddingEnd="@dimen/_8sdp"
                                        android:paddingBottom="@dimen/_4sdp"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/font_9" />

                            </LinearLayout>
                        </RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                            android:id="@+id/container_video"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:clickable="true"
                            android:focusable="true"
                            android:minHeight="@dimen/_120sdp"
                            android:paddingTop="@dimen/_8sdp"
                            app:layout_constraintBottom_toBottomOf="@id/upper_container"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/upper_container"
                            app:layout_constraintWidth_default="percent"
                            app:layout_constraintWidth_percent="0.8">

                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:clickable="false"
                                android:onClick="@{()->handler.playVideo()}"
                                android:scaleType="centerCrop" />

                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/play_icon"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:clickable="false"
                                android:onClick="@{()->handler.playVideo()}"
                                android:padding="@dimen/_12sdp"
                                android:src="@drawable/ic_play_24dp"
                                app:tint="@color/white" />

                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                            fontPath="fonts/OpenSans-SemiBold.ttf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="Course Ki Puri Jaankari Aapko Is Video Mei Mil Jayegi  "
                            android:textColor="@color/emoji_icon_color"
                            android:textSize="@dimen/font_12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/container_video"
                            app:layout_constraintWidth_default="percent"
                            app:layout_constraintWidth_percent="0.8" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                        android:id="@+id/price_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:padding="@dimen/_8sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_up_offer_price"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/font_18" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_up_actual_price"
                            fontPath="fonts/OpenSans-SemiBold.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:textColor="@color/emoji_icon_color"
                            android:textSize="@dimen/font_12" />

                </LinearLayout>


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_buy_course"
                        fontPath="fonts/OpenSans-Bold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_4sdp"
                        android:background="@drawable/round_rect_default"
                        android:backgroundTint="@color/button_primary_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:onClick="@{()->handler.buyCourse()}"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/start_course_now"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14"
                        app:cornerRadius="@dimen/_4sdp"

                        app:rippleColor="@color/white" />

                <com.mindorks.placeholderview.PlaceHolderView
                        android:id="@+id/course_detail_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="true"
                        android:padding="@dimen/_4sdp"
                        android:scrollbars="vertical" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <androidx.cardview.widget.CardView
                android:id="@+id/below_buy_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:animateLayoutChanges="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="@dimen/_8sdp"
                android:visibility="gone"
                card_view:cardElevation="@dimen/_8sdp"
                card_view:cardPreventCornerOverlap="false"
                card_view:visibility="visible">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@drawable/textlines" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_9sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_9sdp"
                    android:weightSum="2">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.25"
                        android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_down_offer_price"
                            fontPath="fonts/OpenSans-Bold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:gravity="start|center|bottom"
                            android:maxLines="1"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/font_18"
                            card_view:text="$ 249" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_down_actual_price"
                            fontPath="fonts/OpenSans-SemiBold.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:textColor="@color/emoji_icon_color"
                            android:textSize="@dimen/font_12"
                            card_view:text="$ 299" />


                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                        fontPath="fonts/OpenSans-Bold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".75"
                        android:background="@drawable/round_rect_default"
                        android:backgroundTint="@color/button_primary_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:onClick="@{()->handler.buyCourse()}"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="@string/buy_course"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_16"
                        app:cornerRadius="@dimen/_4sdp"
                        app:rippleColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>