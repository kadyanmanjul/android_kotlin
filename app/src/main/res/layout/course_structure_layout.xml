<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/_12sdp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
                    android:id="@+id/tv_name"
                    fontPath="fonts/OpenSans-SemiBold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/iv_expand"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:layout_toStartOf="@id/iv_expand"
                    android:gravity="center_vertical|start"
                    android:maxLines="3"
                    android:textColor="@color/gray_48"
                    android:textSize="@dimen/font_17" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_expand"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/_4sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:src="@drawable/ic_expand" />


        </RelativeLayout>


        <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
                android:id="@+id/tv_detail"
                fontPath="fonts/OpenSans-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center_vertical|start"
                android:paddingTop="@dimen/_4sdp"
                android:textColor="@color/font_color"
                android:textSize="@dimen/font_14"
                android:visibility="gone" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>