<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/countryCodeHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ccp_selectable_bg">

    <TextView
            android:id="@+id/textView_selectedCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:text="sdfsdf sdfsdf sdfsd"
            android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Bold"
            android:visibility="visible" />

    <ImageView
            android:id="@+id/imageView_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView_selectedCountry"
            android:adjustViewBounds="true"
            android:alpha="0.6"
            android:contentDescription="@string/selection_arrow"
            android:src="@drawable/ccp_down_arrow"
            android:visibility="gone" />
</RelativeLayout>