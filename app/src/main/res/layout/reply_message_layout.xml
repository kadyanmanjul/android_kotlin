<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/replyMessageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_layout"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:visibility="gone"
    app:cardBackgroundColor="@color/reply_msg_background"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/_8sdp">

        <View
            android:id="@+id/indicatorView"
            android:layout_width="@dimen/_3sdp"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/reply_message"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/reply_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_reply_layout_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="@dimen/_150sdp"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"
                tools:text="@tools:sample/full_names" />

            <TextView
                android:id="@+id/tv_reply_layout_subtitle"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="end"
                android:maxWidth="@dimen/_178sdp"
                android:maxLines="3"
                android:textColor="@color/grey_68"
                android:textSize="@dimen/_11ssp"
                android:textStyle="italic"
                app:drawableTint="@color/dark_grey"
                tools:text="Perfect! I've been waiting to go" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_reply_media"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:visibility="gone"
            tools:src="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/iv_reply_close"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/ic_sdk_close"
            app:tint="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
