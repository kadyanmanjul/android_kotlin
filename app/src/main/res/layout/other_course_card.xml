<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_skill_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:scaleType="fitXY"
        android:src="@drawable/goverment_course_thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/play_video_button"
            android:background="@drawable/blue_rounded_corner"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:elevation="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_skill_logo"
            app:rippleColor="@color/colorAccent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_icon"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:tint="@color/colorAccent"
                app:srcCompat="@drawable/ic_play_icon_race" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_toRightOf="@id/play_icon"
                android:text="Watch video"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H8_Semi_Bold"
                android:textColor="@color/colorAccent">

            </androidx.appcompat.widget.AppCompatTextView>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>