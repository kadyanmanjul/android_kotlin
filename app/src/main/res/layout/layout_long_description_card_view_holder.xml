<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/course_padding_dimen"
        android:layout_marginVertical="@dimen/_20sdp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H5"
            android:textColor="@color/text_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="percent"
            tools:ignore="MissingPrefix"
            tools:text="Key to a dynamic personality" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="fill"
            android:textAppearance="@style/TextAppearance.JoshTypography.BodyRegular20"
            android:textColor="@color/text_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintWidth_default="percent"
            tools:text="Learn the secrets to become a dynamic personality and impress your peers - in the office, college and everywhere else. Indiaâ€™s highest rated Personality Development course is here!" />

    <com.joshtalks.joshskills.core.custom_ui.custom_textview.JoshTextView
        android:id="@+id/text_read_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:text="@string/read_more"
        android:textAppearance="@style/TextAppearance.JoshTypography.Link_Normal"
        android:textColor="@color/primary_500"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintWidth_default="percent" />

</androidx.constraintlayout.widget.ConstraintLayout>
