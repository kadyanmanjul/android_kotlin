<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

    </style>

    <style name="AppNoBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="EditTextTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/gray_53</item>
        <item name="colorControlActivated">@color/squash_light</item>
        <item name="colorControlHighlight">@color/squash_light</item>
    </style>

    <style name="AccountkitTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_background_color">#ffffff</item>
        <item name="com_accountkit_input_background_color">@color/gray_e6</item>
        <item name="com_accountkit_input_border_color">@color/gray_e6</item>
        <item name="com_accountkit_text_color">@color/gray_53</item>
        <item name="com_accountkit_button_background_color">@color/colorAccent</item>
        <item name="com_accountkit_button_text_color">@color/white</item>
        <item name="com_accountkit_button_border_color">#555</item>
        <item name="android:statusBarColor">#000</item>
    </style>


    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>



</resources>
