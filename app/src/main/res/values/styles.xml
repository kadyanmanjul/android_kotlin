<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppNoBarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>


    <style name="Theme.GuidelinesCompat.Light.DarkToolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
    </style>

    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert</item>
    </style>

    <style name="full_dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="FullDialogWithAnimation" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/button_primary_color</item>
        <item name="android:progressTint">@color/button_primary_color</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
    </style>


    <style name="VideoPlayerTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="BottomProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">@color/pdf_bg_color</item>
        <item name="android:progressTint">@color/error_color</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/transparent</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="BaseBottomSheetDialogResizable" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

    <!-- ______________New App Typography's_______________-->
    <style name="TextStyle">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextStyle.TopBarNoScroll" parent="TextStyle">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="TextStyle.TopBarScroll" parent="TextStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextStyle.ButtonText" parent="TextStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextStyle.NormalText" parent="TextStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextStyle.ChipText" parent="TextStyle">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!--FreshChatStyle-->
    <style name="Theme.Freshchat.SelectedTheme" parent="MyCustomTheme" />

    <style name="MyCustomTheme" parent="Theme.Freshchat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="freshchatTeamMemberAvatarIcon">@drawable/josh_skill</item>
        <item name="freshchatTeamMemberMessageTextStyle">@style/TeamMemberMessageTextStyle</item>
        <item name="freshchatUserMessageTextStyle">@style/TeamMemberMessageTextStyle</item>
        <item name="freshchatTeamMemberMessageTimeTextStyle">
            @style/TeamMemberMessageTextStyleSmall
        </item>
        <item name="freshchatUserMessageTimeTextStyle">@style/TeamMemberMessageTextStyleSmall</item>
        <item name="android:textColor">@color/white</item>
        <item name="freshchatSendIcon">@drawable/ic_send_blue</item>
    </style>

    <style name="TeamMemberMessageTextStyle" parent="Widget.Freshchat.ChatResolutionPromptText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TeamMemberMessageTextStyleSmall" parent="Widget.Freshchat.ChatResolutionPromptText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/gray_9E</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_color_selector</item>
        <item name="android:textColor">@color/chip_text_color_selector</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>

    </style>

    <style name="FullDialogWithAnimationV2" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowAnimationStyle">@style/top_to_bottom_animation</item>
    </style>

    <style name="top_to_bottom_animation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

</resources>
