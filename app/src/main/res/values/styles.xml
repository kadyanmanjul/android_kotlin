<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="popupMenuBackground">@drawable/menu_background</item>
        <item name="popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppNoBarTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="popupMenuBackground">@drawable/menu_background</item>
        <item name="popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:statusBarColor">@color/pure_white</item>
    </style>

    <style name="AppTheme.Splash" parent="AppNoBarTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="VideoPlayerTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="com_facebook_activity_theme"/>
    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        ...
        <item name="android:windowBackground">#000</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="background">@color/pure_black</item>
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="popupMenuBackground">@drawable/menu_background</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenuStyle</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppThemeNoAction" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primary_500</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:textColorPrimary">@color/pure_white</item>
        <item name="android:textColorSecondary">@color/pure_white</item>
        <item name="actionMenuTextColor">@color/pure_white</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="actionModeCutDrawable">@drawable/abc_ic_menu_cut_mtrl_alpha</item>
        <item name="actionModeCopyDrawable">@drawable/abc_ic_menu_copy_mtrl_am_alpha</item>
        <item name="actionModePasteDrawable">@drawable/abc_ic_menu_paste_mtrl_am_alpha</item>
        <item name="actionModeSelectAllDrawable">@drawable/abc_ic_menu_selectall_mtrl_alpha</item>
        <item name="actionModeShareDrawable">@drawable/abc_ic_menu_share_mtrl_alpha</item>
    </style>


    <style name="PlacesAutocompleteOverlay"/>

    <style name="Theme.Transparent.ImagePicker" parent="Theme.MaterialComponents.Light.DarkActionBar"/>

    <style name="Theme.Freshchat.SelectedTheme" parent="MyCustomTheme" />

<!--    <style name="Freshchat.Theme.Transparent" parent="Theme.MaterialComponents.Light.DarkActionBar" />-->

    <style name="Dexter.Internal.Theme.Transparent" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="Theme.PlayCore.Transparent" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="CustomPopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MyCustomTheme" parent="Theme.Freshchat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/primary_500</item>
        <item name="freshchatTeamMemberAvatarIcon">@drawable/josh_skill</item>
        <item name="freshchatTeamMemberMessageTextStyle">@style/TeamMemberMessageTextStyle</item>
        <item name="freshchatUserMessageTextStyle">@style/TeamMemberMessageTextStyle</item>
        <item name="freshchatTeamMemberMessageTimeTextStyle">
            @style/TeamMemberMessageTextStyleSmall
        </item>
        <item name="freshchatUserMessageTimeTextStyle">@style/TeamMemberMessageTextStyleSmall</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="freshchatSendIcon">@drawable/ic_send_blue</item>
    </style>

    <style name="TeamMemberMessageTextStyle" parent="Widget.Freshchat.ChatResolutionPromptText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TeamMemberMessageTextStyleSmall" parent="Widget.Freshchat.ChatResolutionPromptText">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="BaseBottomSheetDialogResizable" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialogBlank" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:background">@color/pure_white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@color/primary_500</item>
    </style>

    <style name="Primary_Button_Filled">
        <item name="android:backgroundTint">@color/primary_500</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.JoshTypography.HeadingSemiBold</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="cornerRadius">@dimen/_32sdp</item>
        <item name="rippleColor">@color/pure_white</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Primary_Button_Filled_Disabled">
        <item name="android:backgroundTint">@color/disabled</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.JoshTypography.HeadingSemiBold
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_32sdp</item>
        <item name="rippleColor">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Secondary_Button_Filled">
        <item name="android:backgroundTint">@color/primary_500</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.JoshTypography.SubHeadingSemiBold24</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="cornerRadius">@dimen/_32sdp</item>
        <item name="rippleColor">@color/pure_white</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


</resources>