<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.JoshTypography.HeadingSemiBold" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/noto_sans_semibold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.012</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.JoshTypography.SubHeadingBold_2" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextAppearance.JoshTypography.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontPath">fonts/OpenSans-Bold.ttf</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextAppearance.JoshTypography.BodyRegular" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0.00</item>
    </style>

    <style name="TextAppearance.JoshTypography.TinyRegular" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>