<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:background="@drawable/white_rectangle_with_grey_stroke"
        android:backgroundTint="?attr/cardBackgroundColor"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/_8sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/tv_status_code"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_10ssp"
            tools:text="GET" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_endpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_method"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="api/v1/user_v2" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_status_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:ems="2"
            android:textSize="@dimen/_10ssp"
            tools:text="400" />

    </RelativeLayout>
</layout>