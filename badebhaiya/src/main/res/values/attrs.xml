<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProfilePictureView">
        <attr name="imageUrl" format="string"/>
        <attr name="userName" format="string"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="shape" format="enum">
            <enum name="rounded" value="0" />
            <enum name="circle" value="1" />
            <enum name="normal" value="2" />
        </attr>
        <attr name="nameLetters" format="enum">
            <enum name="one" value="0"/>
            <enum name="two" value="1"/>
        </attr>
    </declare-styleable>
</resources>