<resources>

    <style name="BB_Typography_Nunito_Regular">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Bold">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Sans_Bold">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Semi_Bold">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="BB_Typography_OpenSans_Semi_Bold_Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontPath">fonts/OpenSans-SemiBold.ttf</item>
    </style>

    <style name="BB_Typography_Nunito_Sans_Semi_Bold">
        <item name="fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Sans_Regular">
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textColor">@color/name_scree_text_color</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

    <style name="GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:backgroundTint">@color/reminder_on_button_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/BB_Typography_Nunito_Bold</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="GreyButton" parent="GreenButton">
        <item name="android:backgroundTint">@color/retry_button_color</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>