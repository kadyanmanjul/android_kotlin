<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Joshskills" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BB_Typography_Nunito_Regular">
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Bold">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Sans_Bold">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Semi_Bold">
        <item name="fontFamily">@font/nunito_semi_bold</item>
    </style>

    <style name="BB_Typography_Nunito_Sans_Semi_Bold">
        <item name="fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="BB_Typography_Nunito_Sans_Regular">
        <item name="fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textColor">@color/name_scree_text_color</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.9</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>
</resources>