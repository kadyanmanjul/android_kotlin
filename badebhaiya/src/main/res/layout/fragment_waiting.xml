<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.badebhaiya.liveroom.LiveRoomFragment" />

        <variable
            name="viewModel"
            type="com.joshtalks.badebhaiya.liveroom.viewmodel.LiveRoomViewModel" />
    </data>

    <com.joshtalks.badebhaiya.custom_ui.SingleViewTouchableMotionLayout
        android:id="@+id/liveRoomRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:layoutDescription="@xml/minimize_scene"
        android:background="@color/transparent"
        app:layout_collapseMode="parallax"
        tools:context=".liveroom.LiveRoomFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_app_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/down_arrow"
                android:layout_width="30dp"
                android:layout_height="37dp"
                android:layout_margin="@dimen/_6sdp"
                android:padding="@dimen/_6sdp"
                android:tint="#000000"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="visible"
                android:onClick="@{() -> handler.collapseLiveRoom()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_hallway_down_arrow" />



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_photo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@color/base_app_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView_6dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false"
            app:layout_constraintBottom_toTopOf="@id/button_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/speaker_containers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_bottomsheet_24dp_corner">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
                    android:textColor="@color/pure_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="WAITING ROOM" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/audience_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:isScrollContainer="false"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:itemCount="2"
                    tools:listitem="@layout/li_speakers_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </com.joshtalks.badebhaiya.custom_ui.SingleViewTouchableMotionLayout>
</layout>