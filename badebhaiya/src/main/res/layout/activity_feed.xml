<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="handler"
            type="com.joshtalks.badebhaiya.feed.FeedActivity" />
        <variable
            name="viewModel"
            type="com.joshtalks.badebhaiya.feed.FeedViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/conversation_room_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_iv"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:background="@color/black"
            android:src="@drawable/ic_profile"
            android:onClick="@{() -> viewModel.onProfileClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.02" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:paddingBottom="@dimen/_60sdp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_iv"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/li_room_event" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noRoomsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_80sdp"
            android:gravity="center"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="@color/pure_black"
            android:textSize="@dimen/_12sdp"
            android:visibility="@{viewModel.isRoomsAvailable ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35"
            app:layout_constraintWidth_percent="0.5"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_room_listing_bottom_bg" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/create_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/round_rectangle"
            android:backgroundTint="@color/feed_button_color"
            android:drawableStart="@drawable/ic_plus"
            android:drawablePadding="@dimen/_3sdp"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:paddingHorizontal="@dimen/_13sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/start_a_room"
            android:textAlignment="center"
            android:textAppearance="@style/BB_Typography_Nunito_Bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:onClick="@{() -> viewModel.startRoom()}"
            android:visibility="@{viewModel.isBadeBhaiyaSpeaker ? View.VISIBLE : View.GONE}"
            app:cornerRadius="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bg"
            app:rippleColor="@color/white" />

        <com.joshtalks.badebhaiya.feed.NotificationView
            android:id="@+id/notification_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>