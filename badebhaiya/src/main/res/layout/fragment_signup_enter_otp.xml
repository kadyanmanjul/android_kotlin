<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="com.joshtalks.badebhaiya.signup.fragments.SignUpEnterOTPFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_app_color">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|start"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@color/black"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEnterPhonePrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_otp_prompt"
            android:textAppearance="@style/BB_Typography_Nunito_Regular"
            android:textSize="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_44sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhoneNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/verify_otp_for_phone_text"
            android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEnterPhonePrompt"
            app:layout_constraintVertical_bias="0.39" />

        <com.joshtalks.codeinputview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            app:bar_enabled="false"
            app:cursor_visible="@dimen/_1sdp"
            app:height="@dimen/_38sdp"
            app:box_margin_left="@dimen/_8sdp"
            app:box_margin_right="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberText"
            app:length="4"
            android:layout_marginTop="@dimen/_8sdp"
            app:otp_box_background="@drawable/otp_rectange_box"
            app:otp_box_background_active="@drawable/otp_rectange_box"
            app:underline_width="0dp"
            app:width="@dimen/_38sdp" />

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
            android:textSize="@dimen/_13ssp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otp_view"
            app:layout_constraintVertical_bias="0.087" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/next_button_selector"
            android:text="@string/next"
            android:textSize="@dimen/_17ssp"
            android:paddingHorizontal="@dimen/_50sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_42sdp"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{() -> handler.verifyOTP()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>