<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="roomData"
            type="com.joshtalks.badebhaiya.feed.model.LiveRoomUser" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.joshtalks.badebhaiya.customViews.ProfilePictureView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            app:dynamicUserName="@{roomData.fullName}"
            app:dynamicImageUrl="@{roomData.photoUrl}"
            app:textSize="@{24}"
            app:nameLetters="two"
            app:cornerRadius="@dimen/_16sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@color/red"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/raised_hand_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:padding="@dimen/_2sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Sans_Semi_Bold"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/user_photo"
            app:layout_constraintStart_toEndOf="@id/user_photo"
            app:layout_constraintTop_toTopOf="@id/user_photo"
            tools:text="s fsr " />

        <ImageView
            android:id="@+id/add_to_speaker"
            android:layout_width="@dimen/_64sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/ic_unselected_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>