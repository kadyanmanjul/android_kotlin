<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <import type="com.joshtalks.badebhaiya.feed.model.ConversationRoomType"/>
        <variable
            name="roomData"
            type="com.joshtalks.badebhaiya.feed.model.Users" />

        <variable
            name="viewModel"
            type="com.joshtalks.badebhaiya.profile.ProfileViewModel"/>

        <variable
            name="feedViewModel"
            type="com.joshtalks.badebhaiya.feed.FeedViewModel" />

        <variable
            name="handler"
            type="com.joshtalks.badebhaiya.profile.ProfileActivity" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:clickable="true"
        android:id="@+id/user"
        android:onClick="onProfileClicked"
        app:cardCornerRadius="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:backgroundTint="@color/base_app_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_8sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile_pic"
                imageCornerRadius="@{@dimen/_16sdp}"
                initialsFontSize="@{24}"
                android:layout_width="@dimen/_48sdp"
                android:onClick="@{() -> feedViewModel.onProfileClicked()}"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.036"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.538"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView_20dp"
                tools:background="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
                android:textColor="@color/profile_feed_item_font_color"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_profile_pic"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Akhand Swarup Pandit" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnFollow"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/follow_button_background"
                android:gravity="center"
                android:onClick="@{() -> handler.updateFollowStatus()}"
                android:text="@string/follow"
                android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
                android:textColor="@color/follow_button_stroke"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.970"
                app:layout_constraintStart_toStartOf="@id/iv_profile_pic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProfileBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/profile_font_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="@id/userName"
                android:textAppearance="@style/BB_Typography_Nunito_Regular"
                app:layout_constraintTop_toBottomOf="@id/userName"
                tools:text="This is Akhand Swarupâ€™s Bio.\nHe is an IES Officer" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>