<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_270sdp"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"

    android:background="@drawable/round_rectangle_for_clubhouse_images">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:gravity="center"
        android:text="आप इस जोश स्पीकर से क्यों बात करना चाहते हैं?"
        android:textAppearance="@style/BB_Typography_Nunito_Sans_Bold"
        android:textSize="@dimen/_14ssp"
        android:textColor="#1E1D1B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="#EDEFF2"
        android:gravity="top"
        android:hint="Write Here"
        android:padding="@dimen/_7sdp"
        android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/submit"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rect_round"
        android:backgroundTint="#27AE61"
        android:elevation="@dimen/_3sdp"
        android:gravity="center"
        android:shadowColor="@color/dark_grey"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="SUBMIT"
        android:textAppearance="@style/BB_Typography_Nunito_Sans_Bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Skip"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rect_round"
        android:layout_marginBottom="@dimen/_7sdp"
        android:backgroundTint="@color/base_app_color"
        android:elevation="@dimen/_3sdp"
        android:shadowColor="@color/dark_grey"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:gravity="center"
        android:text="SKIP"
        android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
        android:textColor="#1E1D1B"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>