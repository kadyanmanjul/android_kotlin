<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="roomData"
            type="com.joshtalks.badebhaiya.feed.model.LiveRoomUser" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:paddingVertical="@dimen/_2sdp">

        <FrameLayout
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/golden_ring_27dp_border"
            android:padding="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.joshtalks.badebhaiya.customViews.ProfilePictureView
                android:id="@+id/user_image_iv"
                android:layout_width="@dimen/_56sdp"
                app:dynamicImageUrl="@{roomData.photoUrl}"
                app:dynamicUserName="@{roomData.fullName}"
                app:textSize="@{24}"
                app:nameLetters="one"
                app:cornerRadius="@dimen/_24sdp"
                android:layout_height="@dimen/_56sdp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView_26dp" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/volume_icon"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_3sdp"
            android:visibility="gone"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@id/user_image"
            app:layout_constraintEnd_toEndOf="@id/user_image"
            app:srcCompat="@drawable/ic_mic_off"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/raised_hands"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_margin="@dimen/_4sdp"
            android:background="@drawable/circle2"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_3sdp"
            android:elevation="1dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/user_image"
            app:layout_constraintStart_toStartOf="@id/user_image"
            app:srcCompat="@drawable/ic_vector_hf"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:padding="@dimen/_2sdp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@id/user_image"
            app:layout_constraintStart_toStartOf="@id/user_image"
            app:layout_constraintTop_toBottomOf="@id/user_image">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/speaker_badge"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/circle2"
                android:backgroundTint="#27AE61"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintEnd_toStartOf="@id/name"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name"
                app:srcCompat="@drawable/ic_star"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/pure_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/speaker_badge"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rohaneeee a" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>