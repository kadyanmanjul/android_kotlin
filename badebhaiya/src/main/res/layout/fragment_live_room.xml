<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handler"
            type="com.joshtalks.badebhaiya.liveroom.LiveRoomFragment" />

        <variable
            name="viewModel"
            type="com.joshtalks.badebhaiya.liveroom.viewmodel.LiveRoomViewModel" />
    </data>

    <com.joshtalks.badebhaiya.custom_ui.SingleViewTouchableMotionLayout
        android:id="@+id/liveRoomRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:layoutDescription="@xml/minimize_scene"
        android:background="@color/transparent"
        app:layout_collapseMode="parallax"
        tools:context=".liveroom.LiveRoomFragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_app_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/down_arrow"
                android:layout_width="30dp"
                android:layout_height="37dp"
                android:layout_margin="@dimen/_6sdp"
                android:padding="@dimen/_6sdp"
                android:tint="#000000"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="visible"
                android:onClick="@{() -> handler.collapseLiveRoom()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_hallway_down_arrow" />

            <TextView
                android:id="@+id/hallway"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="@string/all_rooms"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7"
                android:textColor="@color/pure_black"
                app:layout_constraintBottom_toBottomOf="@id/down_arrow"
                app:layout_constraintStart_toEndOf="@id/down_arrow"
                app:layout_constraintTop_toTopOf="@id/down_arrow" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/user_photo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@color/base_app_color"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedCornersImageView_6dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false"
            app:layout_constraintBottom_toTopOf="@id/button_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/speaker_containers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_bottomsheet_24dp_corner">

                <TextView
                    android:id="@+id/topic"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginEnd="@dimen/_32sdp"
                    android:padding="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textAppearance="@style/BB_Typography_Nunito_Sans_Regular"
                    android:textColor="@color/pure_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Toghf fhgwef uywgefuywgef uywgefuywg efuyg wuyg fuywge pic" />

                <TextView
                    android:id="@+id/speakerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/speakers"
                    android:textAppearance="@style/TextAppearance.JoshTypography.Body_Text_Small_Semi_Bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/speakers_recycler_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topic"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/speakers_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:isScrollContainer="false"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintBottom_toTopOf="@id/audienceTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/speakerTextView"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:itemCount="2"
                    tools:listitem="@layout/li_speakers_item" />

                <TextView
                    android:id="@+id/audienceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:text="@string/audience"
                    android:textAppearance="@style/BB_Typography_Nunito_Sans_Bold"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#E7E4D5"
                    app:layout_constraintBottom_toTopOf="@id/listener__recycler_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/speakers_recycler_view"
                    app:layout_constraintVertical_chainStyle="packed" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listener__recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_38sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/audienceTextView"
                    tools:itemCount="2"
                    tools:listitem="@layout/li_audience_item" />

                <FrameLayout
                    android:id="@+id/live_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="-122dp"
                    tools:layout_editor_absoluteY="-198dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <View
            android:id="@+id/bottomControlBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/scrollView" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> handler.expandLiveRoom()}"
            android:background="@drawable/background_bottomsheet_24dp_corner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/leave_end_room_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/rect_round"
                android:backgroundTint="@color/da_grey"
                android:shadowRadius="30"
                android:drawableStart="@drawable/ic_victory_emoji"
                android:drawablePadding="@dimen/_8sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:paddingStart="@dimen/_14sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:textAppearance="@style/TextAppearance.JoshTypography.Heading_H7"
                android:textColor="#EB5A5C"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/nunito_sans_extrabold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Leave quietly" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mute_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/state_background"
                android:elevation="@dimen/_1sdp"
                android:padding="@dimen/_6sdp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_mic_off"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/unmute_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/state_background"
                android:elevation="@dimen/_1sdp"
                android:padding="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_mic_black_on"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/raised_hands"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_62sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/state_background"
                android:padding="@dimen/_6sdp"
                android:visibility="gone"
                android:elevation="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_plus"
                android:tint="@color/black"
                tools:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hand_raise_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/state_background"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:elevation="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mute_btn"
                app:srcCompat="@drawable/ic_hand_raised_icon"
                tools:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hand_unraise_btn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/state_background"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:elevation="@dimen/_1sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mute_btn"
                app:srcCompat="@drawable/ic_unraise_hand_icon"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notificationRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.joshtalks.badebhaiya.feed.NotificationView
                android:id="@+id/notification_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.joshtalks.badebhaiya.custom_ui.SingleViewTouchableMotionLayout>
</layout>