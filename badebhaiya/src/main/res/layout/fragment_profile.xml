<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="handler"
            type="com.joshtalks.badebhaiya.profile.ProfileFragment" />
        <variable
            name="viewModel"
            type="com.joshtalks.badebhaiya.profile.ProfileViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/profile"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/base_app_color">

        <include
            android:id="@+id/profile_toolbar"
            layout="@layout/base_toolbar" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile_pic"
            imageCornerRadius="@{@dimen/_24sdp}"
            imageUrl="@{viewModel.userProfileData.profilePicUrl}"
            initialsFontSize="@{24}"
            userName="@{viewModel.userFullName}"
            android:layout_width="@dimen/_68sdp"
            android:layout_height="@dimen/_68sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView_28dp"
            tools:background="@drawable/user_profile_background" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnRequest"
            android:layout_width="@dimen/_88sdp"
            android:layout_height="@dimen/_23sdp"
            android:background="@drawable/request_button_background"
            android:gravity="center"
            android:onClick="@{() -> handler.requestRoomPopup()}"
            android:text="@string/request"
            android:elevation="@dimen/_4sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:layout_marginRight="@dimen/_10sdp"
            android:visibility="@{(viewModel.isBadeBhaiyaSpeaker &amp;&amp; !viewModel.isSelfProfile) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintStart_toStartOf="@id/iv_profile_pic"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            app:layout_constraintVertical_bias="1.0" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnFollow"
            android:layout_width="@dimen/_98sdp"
            android:layout_height="@dimen/_23sdp"
            android:background="@drawable/follow_button_background"
            android:gravity="center"
            android:onClick="@{() -> handler.updateFollowStatus()}"
            android:text="@string/follow"
            android:elevation="@dimen/_4sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="@color/follow_button_stroke"
            android:textSize="@dimen/_12ssp"
            android:visibility="@{(viewModel.isBadeBhaiyaSpeaker &amp;&amp; !viewModel.isSelfProfile) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            app:layout_constraintStart_toStartOf="@id/iv_profile_pic"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            app:layout_constraintVertical_bias="0.95" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/request_count_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            android:background="@drawable/request_count_badge"
            android:elevation="@dimen/_5sdp"
            android:gravity="right"
            android:paddingHorizontal="@dimen/_7sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/btnFollow"
            app:layout_constraintEnd_toEndOf="@+id/callRequestsBtnRoot"
            tools:text="39"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/callRequestsBtnRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            android:paddingTop="@dimen/_6sdp"
            android:paddingEnd="@dimen/_6sdp"
            app:layout_constraintStart_toStartOf="@id/iv_profile_pic"
            app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
            app:layout_constraintVertical_bias="0.95" >



            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/callRequestsBtn"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/following_button_background"
                android:elevation="@dimen/_4sdp"
                android:gravity="center"
                android:onClick="@{() -> handler.navigateToRequestsList()}"
                android:text="@string/call_requests"
                android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:visibility="@{(viewModel.isBadeBhaiyaSpeaker &amp;&amp; viewModel.isSelfProfile) ? View.VISIBLE : View.GONE}" />

        </FrameLayout>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Bold"
            android:textColor="@color/profile_font_color"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="@id/iv_profile_pic"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_pic"
            tools:text="Akhand Swarup Pandit" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFollowers"
            onSingleClick="@{()->handler.openList()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="@color/profile_font_color"
            android:textSize="@dimen/_12ssp"
            app:flow_verticalAlign="top"
            app:layout_constraintStart_toStartOf="@id/tvUserName"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            tools:text="99 followers" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="118dp"
            android:layout_marginTop="@dimen/_9sdp"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="@color/profile_font_color"
            android:textSize="@dimen/_12ssp"
            app:flow_verticalAlign="top"
            app:layout_constraintStart_toStartOf="@id/tvUserName"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            tools:text="99 calls" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProfileBio"
            onSingleClick="@{()->handler.showBottomSheet()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:clickable="@{viewModel.isSelfProfile()}"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="@color/profile_font_color"
            android:textSize="@dimen/_12ssp"
            android:visibility="@{(viewModel.isBadeBhaiyaSpeaker &amp;&amp; viewModel.isBioTextAvailable)? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="@id/tvFollowers"
            app:layout_constraintTop_toBottomOf="@id/tvFollowers"
            tools:text="This is Akhand Swarupâ€™s Bio.\nHe is an IES Officer" />

        <TextView
            android:id="@+id/addABio"
            onSingleClick="@{()->handler.showBottomSheet()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Add a bio"
            android:textAppearance="@style/BB_Typography_Nunito_Semi_Bold"
            android:textColor="#5576AB"
            android:textSize="@dimen/_14sdp"
            android:visibility="@{(viewModel.isBadeBhaiyaSpeaker &amp;&amp; viewModel.isSelfProfile &amp;&amp; !viewModel.isBioTextAvailable()) ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="@id/tvFollowers"
            app:layout_constraintTop_toBottomOf="@id/tvFollowers" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:background="#C4C4C4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProfileBio" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSpeakerRoomHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/nunito_sans_semi_bold"
            android:paddingStart="3dp"
            android:text="@string/upcoming_rooms"
            android:textColor="@color/profile_font_color"
            android:textSize="@dimen/_12ssp"
            android:visibility="@{viewModel.isBadeBhaiyaSpeaker ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSpeakerRoomList"
            feedAdapter="@{viewModel.speakerProfileRoomsAdapter}"
            onFeedItemClick="@{handler}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:visibility="@{viewModel.isBadeBhaiyaSpeaker ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSpeakerRoomHeading"
            tools:listitem="@layout/li_room_event" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="@id/rvSpeakerRoomList" />


            <FrameLayout
                android:id="@+id/room_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/_11sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>