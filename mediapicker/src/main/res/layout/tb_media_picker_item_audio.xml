<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_margin="@dimen/offset_8"
        android:layout_width="@dimen/length_44"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/length_40">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_24"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tb_media_picker_ic_audio_box"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/item_audio_mimetype_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_20"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/tb_media_picker_ic_audio_aud"
            android:layout_gravity="bottom"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/item_audio_name"
            style="@style/TextTitle"
            tools:text="Audio Name" />

        <TextView
            android:id="@+id/item_audio_size"
            style="@style/TextNormal"
            tools:text="Size"
            android:textSize="@dimen/font_14" />
    </LinearLayout>


    <CheckBox
        android:id="@+id/item_audio_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/offset_8"
        android:layout_gravity="center_vertical"/>

</LinearLayout>